@model Online_Course.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<div class="min-h-[calc(100vh-200px)] bg-background-light dark:bg-background-dark py-8 px-4">
    <div class="max-w-3xl mx-auto flex flex-col gap-6">
        <!-- Page Heading -->
        <div class="flex items-center gap-4">
            <a asp-action="Index" class="size-10 rounded-lg bg-slate-100 dark:bg-[#283039] flex items-center justify-center text-slate-500 dark:text-text-secondary hover:bg-slate-200 dark:hover:bg-[#3a4552] transition-colors">
                <span class="material-symbols-outlined">arrow_back</span>
            </a>
            <div>
                <h1 class="text-2xl lg:text-3xl font-bold text-slate-900 dark:text-white">Đổi mật khẩu</h1>
                <p class="text-slate-500 dark:text-text-secondary">Cập nhật mật khẩu để bảo vệ tài khoản của bạn</p>
            </div>
        </div>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="p-4 rounded-lg bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 text-red-700 dark:text-red-400 flex items-center gap-3">
                <span class="material-symbols-outlined">error</span>
                <span>@TempData["ErrorMessage"]</span>
            </div>
        }

        <!-- Security Notice -->
        <div class="p-4 rounded-lg bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800 flex items-start gap-3">
            <span class="material-symbols-outlined text-amber-600 dark:text-amber-400 mt-0.5">info</span>
            <div>
                <p class="text-amber-700 dark:text-amber-400 font-medium">Lưu ý bảo mật</p>
                <p class="text-amber-600 dark:text-amber-500 text-sm mt-1">Mật khẩu phải có ít nhất 6 ký tự. Sử dụng kết hợp chữ hoa, chữ thường, số và ký tự đặc biệt để tăng độ bảo mật.</p>
            </div>
        </div>

        <!-- Form Card -->
        <div class="bg-white dark:bg-surface-dark border border-border-light dark:border-border-dark rounded-xl p-6 lg:p-8 shadow-sm">
            <div class="flex items-center gap-3 mb-6">
                <span class="material-symbols-outlined text-primary">lock</span>
                <h3 class="text-lg font-bold text-slate-900 dark:text-white">Thay đổi mật khẩu</h3>
            </div>
            
            <form asp-action="ChangePassword" method="post">
                @Html.AntiForgeryToken()
                
                <div class="space-y-6">
                    <!-- Current Password -->
                    <div class="flex flex-col gap-1.5">
                        <label asp-for="CurrentPassword" class="text-sm font-medium text-slate-700 dark:text-slate-300 flex items-center gap-2">
                            <span class="material-symbols-outlined text-[18px] text-primary">lock</span>
                            Mật khẩu hiện tại
                        </label>
                        <div class="relative">
                            <input asp-for="CurrentPassword" type="password" id="currentPassword" class="w-full h-12 px-4 pr-12 bg-slate-50 dark:bg-[#1e2329] border border-border-light dark:border-border-dark rounded-lg text-slate-900 dark:text-white placeholder-slate-400 dark:placeholder-[#586472] focus:ring-2 focus:ring-primary focus:border-primary transition-colors" placeholder="Nhập mật khẩu hiện tại" />
                            <button type="button" onclick="togglePassword('currentPassword', 'toggleCurrent')" class="absolute right-3 top-1/2 -translate-y-1/2 text-slate-400 dark:text-[#586472] hover:text-slate-600 dark:hover:text-white transition-colors">
                                <span id="toggleCurrent" class="material-symbols-outlined">visibility</span>
                            </button>
                        </div>
                        <span asp-validation-for="CurrentPassword" class="text-red-500 dark:text-red-400 text-sm"></span>
                    </div>

                    <!-- New Password -->
                    <div class="flex flex-col gap-1.5">
                        <label asp-for="NewPassword" class="text-sm font-medium text-slate-700 dark:text-slate-300 flex items-center gap-2">
                            <span class="material-symbols-outlined text-[18px] text-primary">lock_reset</span>
                            Mật khẩu mới
                        </label>
                        <div class="relative">
                            <input asp-for="NewPassword" type="password" id="newPassword" class="w-full h-12 px-4 pr-12 bg-slate-50 dark:bg-[#1e2329] border border-border-light dark:border-border-dark rounded-lg text-slate-900 dark:text-white placeholder-slate-400 dark:placeholder-[#586472] focus:ring-2 focus:ring-primary focus:border-primary transition-colors" placeholder="Nhập mật khẩu mới" />
                            <button type="button" onclick="togglePassword('newPassword', 'toggleNew')" class="absolute right-3 top-1/2 -translate-y-1/2 text-slate-400 dark:text-[#586472] hover:text-slate-600 dark:hover:text-white transition-colors">
                                <span id="toggleNew" class="material-symbols-outlined">visibility</span>
                            </button>
                        </div>
                        <span asp-validation-for="NewPassword" class="text-red-500 dark:text-red-400 text-sm"></span>
                    </div>

                    <!-- Confirm Password -->
                    <div class="flex flex-col gap-1.5">
                        <label asp-for="ConfirmPassword" class="text-sm font-medium text-slate-700 dark:text-slate-300 flex items-center gap-2">
                            <span class="material-symbols-outlined text-[18px] text-primary">check_circle</span>
                            Xác nhận mật khẩu mới
                        </label>
                        <div class="relative">
                            <input asp-for="ConfirmPassword" type="password" id="confirmPassword" class="w-full h-12 px-4 pr-12 bg-slate-50 dark:bg-[#1e2329] border border-border-light dark:border-border-dark rounded-lg text-slate-900 dark:text-white placeholder-slate-400 dark:placeholder-[#586472] focus:ring-2 focus:ring-primary focus:border-primary transition-colors" placeholder="Nhập lại mật khẩu mới" />
                            <button type="button" onclick="togglePassword('confirmPassword', 'toggleConfirm')" class="absolute right-3 top-1/2 -translate-y-1/2 text-slate-400 dark:text-[#586472] hover:text-slate-600 dark:hover:text-white transition-colors">
                                <span id="toggleConfirm" class="material-symbols-outlined">visibility</span>
                            </button>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-red-500 dark:text-red-400 text-sm"></span>
                    </div>

                    <!-- Buttons -->
                    <div class="flex items-center gap-4 pt-4 border-t border-border-light dark:border-border-dark">
                        <button type="submit" class="flex-1 h-12 bg-primary hover:bg-blue-600 text-white font-semibold rounded-lg transition-colors flex items-center justify-center gap-2">
                            <span class="material-symbols-outlined text-[20px]">lock_reset</span>
                            Đổi mật khẩu
                        </button>
                        <a asp-action="Index" class="flex-1 h-12 bg-slate-100 dark:bg-[#283039] hover:bg-slate-200 dark:hover:bg-[#3a4552] text-slate-700 dark:text-white font-medium rounded-lg transition-colors flex items-center justify-center">
                            Hủy
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword(inputId, iconId) {
            const input = document.getElementById(inputId);
            const icon = document.getElementById(iconId);
            if (input.type === 'password') {
                input.type = 'text';
                icon.textContent = 'visibility_off';
            } else {
                input.type = 'password';
                icon.textContent = 'visibility';
            }
        }
    </script>
}
