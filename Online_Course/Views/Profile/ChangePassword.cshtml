@model Online_Course.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="min-h-screen bg-background-dark py-8 px-4">
    <div class="max-w-2xl mx-auto">
        <!-- Page Header -->
        <div class="flex items-center gap-4 mb-8">
            <a asp-action="Index" class="p-2 text-[#9dabb9] hover:text-white hover:bg-[#283039] rounded-lg transition-colors">
                <span class="material-symbols-outlined">arrow_back</span>
            </a>
            <div>
                <h1 class="text-white text-2xl font-bold">Đổi mật khẩu</h1>
                <p class="text-[#9dabb9] text-sm">Cập nhật mật khẩu để bảo vệ tài khoản của bạn</p>
            </div>
        </div>

        <!-- Security Notice -->
        <div class="mb-6 p-4 bg-yellow-500/10 border border-yellow-500/30 rounded-lg flex items-start gap-3">
            <span class="material-symbols-outlined text-yellow-500 mt-0.5">info</span>
            <div>
                <p class="text-yellow-500 font-medium">Lưu ý bảo mật</p>
                <p class="text-yellow-500/80 text-sm mt-1">Mật khẩu phải có ít nhất 6 ký tự. Sử dụng kết hợp chữ hoa, chữ thường, số và ký tự đặc biệt để tăng độ bảo mật.</p>
            </div>
        </div>

        <!-- Form Card -->
        <div class="bg-[#1a222c] border border-[#283039] rounded-xl p-6">
            <form asp-action="ChangePassword" method="post">
                @Html.AntiForgeryToken()
                
                <div class="space-y-6">
                    <!-- Current Password -->
                    <div>
                        <label asp-for="CurrentPassword" class="block text-sm font-medium text-white mb-2">
                            <span class="flex items-center gap-2">
                                <span class="material-symbols-outlined text-lg">lock</span>
                                Mật khẩu hiện tại
                            </span>
                        </label>
                        <div class="relative">
                            <input asp-for="CurrentPassword" type="password" id="currentPassword" class="w-full h-12 px-4 pr-12 bg-[#111418] border border-[#283039] rounded-lg text-white placeholder-[#586472] focus:ring-2 focus:ring-primary focus:border-primary transition-colors" placeholder="Nhập mật khẩu hiện tại" />
                            <button type="button" onclick="togglePassword('currentPassword', 'toggleCurrent')" class="absolute right-3 top-1/2 -translate-y-1/2 text-[#586472] hover:text-white transition-colors">
                                <span id="toggleCurrent" class="material-symbols-outlined">visibility</span>
                            </button>
                        </div>
                        <span asp-validation-for="CurrentPassword" class="text-red-400 text-sm mt-1 block"></span>
                    </div>


                    <!-- New Password -->
                    <div>
                        <label asp-for="NewPassword" class="block text-sm font-medium text-white mb-2">
                            <span class="flex items-center gap-2">
                                <span class="material-symbols-outlined text-lg">lock_reset</span>
                                Mật khẩu mới
                            </span>
                        </label>
                        <div class="relative">
                            <input asp-for="NewPassword" type="password" id="newPassword" class="w-full h-12 px-4 pr-12 bg-[#111418] border border-[#283039] rounded-lg text-white placeholder-[#586472] focus:ring-2 focus:ring-primary focus:border-primary transition-colors" placeholder="Nhập mật khẩu mới" />
                            <button type="button" onclick="togglePassword('newPassword', 'toggleNew')" class="absolute right-3 top-1/2 -translate-y-1/2 text-[#586472] hover:text-white transition-colors">
                                <span id="toggleNew" class="material-symbols-outlined">visibility</span>
                            </button>
                        </div>
                        <span asp-validation-for="NewPassword" class="text-red-400 text-sm mt-1 block"></span>
                    </div>

                    <!-- Confirm Password -->
                    <div>
                        <label asp-for="ConfirmPassword" class="block text-sm font-medium text-white mb-2">
                            <span class="flex items-center gap-2">
                                <span class="material-symbols-outlined text-lg">check_circle</span>
                                Xác nhận mật khẩu mới
                            </span>
                        </label>
                        <div class="relative">
                            <input asp-for="ConfirmPassword" type="password" id="confirmPassword" class="w-full h-12 px-4 pr-12 bg-[#111418] border border-[#283039] rounded-lg text-white placeholder-[#586472] focus:ring-2 focus:ring-primary focus:border-primary transition-colors" placeholder="Nhập lại mật khẩu mới" />
                            <button type="button" onclick="togglePassword('confirmPassword', 'toggleConfirm')" class="absolute right-3 top-1/2 -translate-y-1/2 text-[#586472] hover:text-white transition-colors">
                                <span id="toggleConfirm" class="material-symbols-outlined">visibility</span>
                            </button>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-red-400 text-sm mt-1 block"></span>
                    </div>

                    <!-- Buttons -->
                    <div class="flex items-center gap-4 pt-4">
                        <button type="submit" class="flex-1 h-12 bg-primary hover:bg-blue-600 text-white font-bold rounded-lg transition-colors flex items-center justify-center gap-2">
                            <span class="material-symbols-outlined">lock_reset</span>
                            Đổi mật khẩu
                        </button>
                        <a asp-action="Index" class="flex-1 h-12 bg-[#283039] hover:bg-[#3b4754] text-white font-medium rounded-lg transition-colors flex items-center justify-center">
                            Hủy
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword(inputId, iconId) {
            const input = document.getElementById(inputId);
            const icon = document.getElementById(iconId);
            if (input.type === 'password') {
                input.type = 'text';
                icon.textContent = 'visibility_off';
            } else {
                input.type = 'password';
                icon.textContent = 'visibility';
            }
        }
    </script>
}
