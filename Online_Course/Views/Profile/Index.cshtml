@model Online_Course.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}

<div class="min-h-screen bg-background-dark py-8 px-4">
    <div class="max-w-2xl mx-auto">
        <!-- Page Header -->
        <div class="flex items-center gap-4 mb-8">
            <div class="p-3 bg-primary/10 rounded-xl">
                <span class="material-symbols-outlined text-primary text-3xl">person</span>
            </div>
            <div>
                <h1 class="text-white text-2xl font-bold">Hồ sơ cá nhân</h1>
                <p class="text-[#9dabb9] text-sm">Xem và quản lý thông tin tài khoản của bạn</p>
            </div>
        </div>

        <!-- Success Message -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="mb-6 p-4 bg-green-500/10 border border-green-500/30 rounded-lg flex items-center gap-3">
                <span class="material-symbols-outlined text-green-500">check_circle</span>
                <span class="text-green-500">@TempData["SuccessMessage"]</span>
            </div>
        }

        <!-- Profile Card -->
        <div class="bg-[#1a222c] border border-[#283039] rounded-xl overflow-hidden">
            <!-- Profile Header -->
            <div class="bg-gradient-to-r from-primary/20 to-blue-600/20 p-6">
                <div class="flex items-center gap-4">
                    <div class="w-20 h-20 bg-primary/30 rounded-full flex items-center justify-center">
                        <span class="material-symbols-outlined text-primary text-4xl">person</span>
                    </div>
                    <div>
                        <h2 class="text-white text-xl font-bold">@Model.FullName</h2>
                        <div class="flex items-center gap-2 mt-1">
                            <span class="px-3 py-1 bg-primary/20 text-primary text-xs font-medium rounded-full">
                                @Model.Role
                            </span>
                            @if (Model.IsActive)
                            {
                                <span class="px-3 py-1 bg-green-500/20 text-green-500 text-xs font-medium rounded-full">
                                    Hoạt động
                                </span>
                            }
                            else
                            {
                                <span class="px-3 py-1 bg-red-500/20 text-red-500 text-xs font-medium rounded-full">
                                    Không hoạt động
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>


            <!-- Profile Details -->
            <div class="p-6 space-y-6">
                <!-- Email -->
                <div class="flex items-center gap-4 p-4 bg-[#111418] rounded-lg">
                    <div class="p-2 bg-[#283039] rounded-lg">
                        <span class="material-symbols-outlined text-[#9dabb9]">email</span>
                    </div>
                    <div>
                        <p class="text-[#9dabb9] text-xs uppercase tracking-wider">Email</p>
                        <p class="text-white font-medium">@Model.Email</p>
                    </div>
                </div>

                <!-- Created Date -->
                <div class="flex items-center gap-4 p-4 bg-[#111418] rounded-lg">
                    <div class="p-2 bg-[#283039] rounded-lg">
                        <span class="material-symbols-outlined text-[#9dabb9]">calendar_today</span>
                    </div>
                    <div>
                        <p class="text-[#9dabb9] text-xs uppercase tracking-wider">Ngày tham gia</p>
                        <p class="text-white font-medium">@Model.CreatedAt.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>

                <!-- Role -->
                <div class="flex items-center gap-4 p-4 bg-[#111418] rounded-lg">
                    <div class="p-2 bg-[#283039] rounded-lg">
                        <span class="material-symbols-outlined text-[#9dabb9]">badge</span>
                    </div>
                    <div>
                        <p class="text-[#9dabb9] text-xs uppercase tracking-wider">Vai trò</p>
                        <p class="text-white font-medium">@Model.Role</p>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="p-6 border-t border-[#283039] flex flex-col sm:flex-row gap-4">
                <a asp-action="Edit" class="flex-1 h-12 bg-primary hover:bg-blue-600 text-white font-medium rounded-lg transition-colors flex items-center justify-center gap-2">
                    <span class="material-symbols-outlined text-xl">edit</span>
                    Chỉnh sửa hồ sơ
                </a>
                <a asp-action="ChangePassword" class="flex-1 h-12 bg-[#283039] hover:bg-[#3b4754] text-white font-medium rounded-lg transition-colors flex items-center justify-center gap-2">
                    <span class="material-symbols-outlined text-xl">lock</span>
                    Đổi mật khẩu
                </a>
            </div>
        </div>
    </div>
</div>
