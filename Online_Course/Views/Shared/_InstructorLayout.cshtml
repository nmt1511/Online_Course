<!DOCTYPE html>
<html class="dark" lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Instructor Dashboard</title>
    
    <!-- Google Fonts: Lexend -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    
    <!-- Material Symbols Outlined -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    
    <!-- Theme Config -->
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#137fec",
                        "background-light": "#f6f7f8",
                        "background-dark": "#101922",
                        "surface-dark": "#18222c",
                        "surface-dark-highlight": "#202b36",
                    },
                    fontFamily: {
                        "display": ["Lexend", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.25rem",
                        "lg": "0.5rem",
                        "xl": "0.75rem",
                        "2xl": "1rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    
    <style>
        ::-webkit-scrollbar { width: 8px; height: 8px; }
        ::-webkit-scrollbar-track { background: #101922; }
        ::-webkit-scrollbar-thumb { background: #283039; border-radius: 4px; }
        ::-webkit-scrollbar-thumb:hover { background: #374151; }
    </style>
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-background-light dark:bg-background-dark font-display text-slate-900 dark:text-white antialiased overflow-hidden selection:bg-primary selection:text-white">
    <div class="flex h-screen w-full overflow-hidden">
        <!-- Sidebar Navigation -->
        <aside class="w-72 flex-shrink-0 bg-surface-dark border-r border-slate-800 flex flex-col hidden md:flex">
            <div class="p-6 pb-2">
                <div class="flex items-center gap-3 mb-8">
                    <div class="size-10 rounded-full bg-gradient-to-br from-primary to-blue-600 flex items-center justify-center text-white font-bold text-xl">E</div>
                    <div>
                        <h1 class="text-white text-lg font-bold leading-tight">EduDash</h1>
                        <p class="text-slate-400 text-xs">Instructor Panel</p>
                    </div>
                </div>

                <!-- User Profile -->
                <div class="flex items-center gap-3 p-3 rounded-xl bg-surface-dark-highlight border border-slate-700/50 mb-6">
                    <div class="size-10 rounded-full bg-primary/20 flex items-center justify-center">
                        <span class="material-symbols-outlined text-primary">person</span>
                    </div>
                    <div class="flex flex-col overflow-hidden">
                        <h2 class="text-white text-sm font-medium leading-normal truncate">@User.Identity?.Name</h2>
                        <p class="text-slate-400 text-xs font-normal leading-normal truncate">Giảng viên</p>
                    </div>
                </div>
                
                <!-- Navigation -->
                <nav class="flex flex-col gap-2">
                    <a asp-area="Instructor" asp-controller="Dashboard" asp-action="Index" class="flex items-center gap-3 px-3 py-2.5 rounded-lg @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "bg-primary/10 text-primary border border-primary/20" : "text-slate-400 hover:text-white hover:bg-surface-dark-highlight") transition-colors">
                        <span class="material-symbols-outlined text-[20px]">dashboard</span>
                        <p class="text-sm font-medium leading-normal">Tổng quan</p>
                    </a>
                    <a asp-area="Instructor" asp-controller="Courses" asp-action="Index" class="flex items-center gap-3 px-3 py-2.5 rounded-lg @(ViewContext.RouteData.Values["controller"]?.ToString() == "Courses" || ViewContext.RouteData.Values["controller"]?.ToString() == "Lessons" ? "bg-primary/10 text-primary border border-primary/20" : "text-slate-400 hover:text-white hover:bg-surface-dark-highlight") transition-colors">
                        <span class="material-symbols-outlined text-[20px]">school</span>
                        <p class="text-sm font-medium leading-normal">Quản lý khóa học</p>
                    </a>
                    <a asp-area="Instructor" asp-controller="Students" asp-action="Index" class="flex items-center gap-3 px-3 py-2.5 rounded-lg @(ViewContext.RouteData.Values["controller"]?.ToString() == "Students" ? "bg-primary/10 text-primary border border-primary/20" : "text-slate-400 hover:text-white hover:bg-surface-dark-highlight") transition-colors">
                        <span class="material-symbols-outlined text-[20px]">group</span>
                        <p class="text-sm font-medium leading-normal">Học viên & Tiến độ</p>
                    </a>
                    <a asp-area="Instructor" asp-controller="Analytics" asp-action="Index" class="flex items-center gap-3 px-3 py-2.5 rounded-lg @(ViewContext.RouteData.Values["controller"]?.ToString() == "Analytics" ? "bg-primary/10 text-primary border border-primary/20" : "text-slate-400 hover:text-white hover:bg-surface-dark-highlight") transition-colors">
                        <span class="material-symbols-outlined text-[20px]">bar_chart</span>
                        <p class="text-sm font-medium leading-normal">Thống kê</p>
                    </a>
                </nav>
            </div>
            <div class="mt-auto p-6 pt-2 space-y-1">
                <a asp-area="Instructor" asp-controller="Profile" asp-action="Index" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-surface-dark-highlight transition-colors">
                    <span class="material-symbols-outlined text-[20px]">account_circle</span>
                    <p class="text-sm font-medium leading-normal">Hồ sơ cá nhân</p>
                </a>
                <a asp-area="" asp-controller="Account" asp-action="Logout" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-red-400 hover:text-red-300 hover:bg-red-900/20 transition-colors">
                    <span class="material-symbols-outlined text-[20px]">logout</span>
                    <p class="text-sm font-medium leading-normal">Đăng xuất</p>
                </a>
            </div>
        </aside>

        
        <!-- Main Content Area -->
        <main class="flex-1 flex flex-col h-full overflow-hidden bg-background-dark relative">
            <!-- Top Header -->
            <header class="h-16 flex items-center justify-between px-6 md:px-8 border-b border-slate-800 bg-background-dark shrink-0 z-10">
                <div class="flex items-center gap-4">
                    <button class="md:hidden text-slate-400">
                        <span class="material-symbols-outlined">menu</span>
                    </button>
                    <h2 class="text-white text-lg font-bold">@ViewData["Title"]</h2>
                </div>
                <div class="flex items-center gap-4">
                    <div class="relative hidden sm:block">
                        <span class="absolute left-3 top-1/2 -translate-y-1/2 text-slate-500 material-symbols-outlined text-[20px]">search</span>
                        <input type="text" class="bg-surface-dark text-white text-sm pl-10 pr-4 py-2 rounded-lg border border-slate-700 focus:outline-none focus:border-primary w-64" placeholder="Tìm kiếm khóa học..." />
                    </div>
                    <button class="size-10 flex items-center justify-center rounded-lg bg-surface-dark text-slate-400 hover:text-white transition-colors border border-slate-700">
                        <span class="material-symbols-outlined text-[20px]">notifications</span>
                    </button>
                </div>
            </header>
            
            <!-- Scrollable Page Content -->
            <div class="flex-1 overflow-y-auto p-6 md:p-8 scroll-smooth">
                <div class="max-w-7xl mx-auto flex flex-col gap-8">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>
    
    @await RenderSectionAsync("Scripts", required: false)
    
    <partial name="_ConfirmDialog" />
</body>
</html>
