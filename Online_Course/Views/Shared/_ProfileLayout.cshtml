@{
    var userRole = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "Student";
    var isAdmin = userRole == "Admin";
    var isInstructor = userRole == "Instructor";
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
    var isProfilePage = currentAction == "Index" || currentAction == "Edit";
    var isChangePasswordPage = currentAction == "ChangePassword";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Learning</title>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#137fec",
                        "background-light": "#f6f7f8",
                        "background-dark": "#101922",
                    },
                    fontFamily: {
                        "display": ["Lexend", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.25rem",
                        "lg": "0.5rem",
                        "xl": "0.75rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <style>
        ::-webkit-scrollbar { width: 8px; height: 8px; }
        ::-webkit-scrollbar-track { background: #f1f1f1; }
        ::-webkit-scrollbar-thumb { background: #c1c1c1; border-radius: 4px; }
        ::-webkit-scrollbar-thumb:hover { background: #a1a1a1; }
        .dark ::-webkit-scrollbar-track { background: #111418; }
        .dark ::-webkit-scrollbar-thumb { background: #283039; }
        .dark ::-webkit-scrollbar-thumb:hover { background: #3a4552; }
    </style>
    <script>
        // Apply saved theme on page load (default: light)
        if (localStorage.getItem('theme') === 'dark') {
            document.documentElement.classList.add('dark');
        }
    </script>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-background-light dark:bg-background-dark text-slate-900 dark:text-white font-display overflow-hidden selection:bg-primary/30">
    <div class="flex h-screen w-full">
        <!-- Side Navigation -->
        <aside class="hidden lg:flex w-72 flex-col border-r border-slate-200 dark:border-[#283039] bg-white dark:bg-[#111418]">
            <div class="flex items-center gap-3 px-6 py-5 border-b border-slate-100 dark:border-[#283039]">
                <div class="size-8 text-primary">
                    <svg class="w-full h-full" fill="none" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg">
                        <path d="M4 42.4379C4 42.4379 14.0962 36.0744 24 41.1692C35.0664 46.8624 44 42.2078 44 42.2078L44 7.01134C44 7.01134 35.068 11.6577 24.0031 5.96913C14.0971 0.876274 4 7.27094 4 7.27094L4 42.4379Z" fill="currentColor"></path>
                    </svg>
                </div>
                <h2 class="text-xl font-bold tracking-tight">E-Learning</h2>
            </div>
            <div class="flex flex-col gap-4 p-4 flex-1 overflow-y-auto">
                <!-- User Summary -->
                <div class="flex items-center gap-3 px-2 py-3 mb-2">
                    <div class="size-10 rounded-full bg-primary/20 flex items-center justify-center">
                        <span class="material-symbols-outlined text-primary">person</span>
                    </div>
                    <div class="flex flex-col">
                        <h1 class="text-sm font-semibold leading-tight">@User.Identity?.Name</h1>
                        <p class="text-slate-500 dark:text-[#9dabb9] text-xs">@userRole</p>
                    </div>
                </div>

                <!-- Navigation Links -->
                <nav class="flex flex-col gap-1">
                    @if (isAdmin)
                    {
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-600 dark:text-[#9dabb9] hover:bg-slate-100 dark:hover:bg-[#1e2329] transition-colors group">
                            <span class="material-symbols-outlined text-[24px] group-hover:text-primary transition-colors">dashboard</span>
                            <p class="text-sm font-medium">Tổng quan</p>
                        </a>
                    }
                    else if (isInstructor)
                    {
                        <a asp-area="Instructor" asp-controller="Dashboard" asp-action="Index" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-600 dark:text-[#9dabb9] hover:bg-slate-100 dark:hover:bg-[#1e2329] transition-colors group">
                            <span class="material-symbols-outlined text-[24px] group-hover:text-primary transition-colors">dashboard</span>
                            <p class="text-sm font-medium">Tổng quan</p>
                        </a>
                    }
                    else
                    {
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-600 dark:text-[#9dabb9] hover:bg-slate-100 dark:hover:bg-[#1e2329] transition-colors group">
                            <span class="material-symbols-outlined text-[24px] group-hover:text-primary transition-colors">home</span>
                            <p class="text-sm font-medium">Trang chủ</p>
                        </a>
                        <a asp-area="Student" asp-controller="Progress" asp-action="Index" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-600 dark:text-[#9dabb9] hover:bg-slate-100 dark:hover:bg-[#1e2329] transition-colors group">
                            <span class="material-symbols-outlined text-[24px] group-hover:text-primary transition-colors">local_library</span>
                            <p class="text-sm font-medium">Khóa học của tôi</p>
                        </a>
                    }
                    
                    <!-- Profile Link -->
                    @if (isProfilePage)
                    {
                        <a asp-area="" asp-controller="Profile" asp-action="Index" class="flex items-center gap-3 px-3 py-2.5 rounded-lg bg-primary/10 dark:bg-[#283039] text-primary dark:text-white border-l-4 border-primary">
                            <span class="material-symbols-outlined text-[24px]">person</span>
                            <p class="text-sm font-medium">Thông tin cá nhân</p>
                        </a>
                    }
                    else
                    {
                        <a asp-area="" asp-controller="Profile" asp-action="Index" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-600 dark:text-[#9dabb9] hover:bg-slate-100 dark:hover:bg-[#1e2329] transition-colors group">
                            <span class="material-symbols-outlined text-[24px] group-hover:text-primary transition-colors">person</span>
                            <p class="text-sm font-medium">Thông tin cá nhân</p>
                        </a>
                    }
                    
                    <!-- Change Password Link -->
                    @if (isChangePasswordPage)
                    {
                        <a asp-area="" asp-controller="Profile" asp-action="ChangePassword" class="flex items-center gap-3 px-3 py-2.5 rounded-lg bg-primary/10 dark:bg-[#283039] text-primary dark:text-white border-l-4 border-primary">
                            <span class="material-symbols-outlined text-[24px]">lock</span>
                            <p class="text-sm font-medium">Đổi mật khẩu</p>
                        </a>
                    }
                    else
                    {
                        <a asp-area="" asp-controller="Profile" asp-action="ChangePassword" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-600 dark:text-[#9dabb9] hover:bg-slate-100 dark:hover:bg-[#1e2329] transition-colors group">
                            <span class="material-symbols-outlined text-[24px] group-hover:text-primary transition-colors">lock</span>
                            <p class="text-sm font-medium">Đổi mật khẩu</p>
                        </a>
                    }
                </nav>
            </div>
            <div class="p-4 border-t border-slate-100 dark:border-[#283039]">
                <a asp-area="" asp-controller="Account" asp-action="Logout" class="flex w-full items-center gap-3 px-3 py-2.5 rounded-lg text-red-500 hover:bg-red-50 dark:hover:bg-red-900/10 transition-colors">
                    <span class="material-symbols-outlined text-[24px]">logout</span>
                    <p class="text-sm font-medium">Đăng xuất</p>
                </a>
            </div>
        </aside>
        
        <!-- Main Content -->
        <main class="flex-1 flex flex-col h-full relative overflow-hidden">
            <!-- Top Navigation Bar -->
            <header class="flex items-center justify-between px-6 py-4 border-b border-slate-200 dark:border-[#283039] bg-white dark:bg-[#111418] shrink-0 z-10">
                <div class="flex items-center gap-4 lg:hidden">
                    <button class="text-slate-500 dark:text-white p-1">
                        <span class="material-symbols-outlined">menu</span>
                    </button>
                    <h2 class="text-lg font-bold">E-Learning</h2>
                </div>
                
                <!-- Breadcrumbs (Desktop) -->
                <div class="hidden lg:flex items-center gap-2 text-sm">
                    @if (isAdmin)
                    {
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="text-slate-500 dark:text-[#9dabb9] hover:text-primary transition-colors">Tổng quan</a>
                    }
                    else if (isInstructor)
                    {
                        <a asp-area="Instructor" asp-controller="Dashboard" asp-action="Index" class="text-slate-500 dark:text-[#9dabb9] hover:text-primary transition-colors">Tổng quan</a>
                    }
                    else
                    {
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="text-slate-500 dark:text-[#9dabb9] hover:text-primary transition-colors">Trang chủ</a>
                    }
                    <span class="text-slate-400 dark:text-[#58636d]">/</span>
                    <span class="text-slate-900 dark:text-white font-medium">@ViewData["Title"]</span>
                </div>
                
                <!-- Actions -->
                <div class="flex items-center gap-4 ml-auto">
                    <button class="size-10 rounded-full flex items-center justify-center bg-slate-100 dark:bg-[#283039] text-slate-600 dark:text-white hover:bg-slate-200 dark:hover:bg-[#3a4552] transition-colors relative">
                        <span class="material-symbols-outlined text-[22px]">notifications</span>
                    </button>
                    <div class="lg:hidden size-9 rounded-full bg-primary/20 flex items-center justify-center">
                        <span class="material-symbols-outlined text-primary">person</span>
                    </div>
                </div>
            </header>
            
            <!-- Scrollable Page Content -->
            <div class="flex-1 overflow-y-auto bg-background-light dark:bg-background-dark p-4 lg:p-8">
                @RenderBody()
            </div>
        </main>
    </div>
    
    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
