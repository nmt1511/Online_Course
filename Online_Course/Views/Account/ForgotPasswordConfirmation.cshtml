@{
    ViewData["Title"] = "Xác nhận yêu cầu";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var resetToken = TempData["ResetToken"] as string;
    var resetEmail = TempData["ResetEmail"] as string;
}

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div class="text-center">
            <div class="mx-auto w-16 h-16 bg-green-500/20 rounded-full flex items-center justify-center mb-4">
                <span class="material-symbols-outlined text-green-500 text-3xl">mark_email_read</span>
            </div>
            <h2 class="text-3xl font-bold text-white">Kiểm tra email</h2>
            <p class="mt-2 text-slate-400">
                @(TempData["Message"] ?? "Nếu email tồn tại trong hệ thống, bạn sẽ nhận được hướng dẫn đặt lại mật khẩu.")
            </p>
        </div>

        @if (!string.IsNullOrEmpty(resetToken) && !string.IsNullOrEmpty(resetEmail))
        {
            <div class="bg-surface-dark rounded-xl p-6 border border-slate-700">
                <p class="text-yellow-400 text-sm mb-4">
                    <span class="material-symbols-outlined text-sm align-middle">info</span>
                    Demo mode: Link đặt lại mật khẩu (trong thực tế sẽ gửi qua email)
                </p>
                <a asp-action="ResetPassword" asp-route-token="@resetToken" asp-route-email="@resetEmail"
                   class="block w-full py-3 px-4 bg-primary hover:bg-blue-600 text-white font-medium rounded-lg transition-colors text-center">
                    Đặt lại mật khẩu
                </a>
            </div>
        }

        <div class="text-center">
            <a asp-action="Login" class="text-primary hover:text-blue-400 text-sm">
                ← Quay lại đăng nhập
            </a>
        </div>
    </div>
</div>
