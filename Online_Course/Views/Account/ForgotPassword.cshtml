@model Online_Course.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div class="text-center">
            <h2 class="text-3xl font-bold text-white">Quên mật khẩu</h2>
            <p class="mt-2 text-slate-400">Nhập email của bạn để nhận hướng dẫn đặt lại mật khẩu</p>
        </div>

        <div class="bg-surface-dark rounded-xl p-8 border border-slate-700">
            <form asp-action="ForgotPassword" method="post" class="space-y-6">
                @Html.AntiForgeryToken()
                
                <div asp-validation-summary="ModelOnly" class="text-red-400 text-sm"></div>

                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-slate-300 mb-2">Email</label>
                    <input asp-for="Email" type="email" 
                           class="w-full px-4 py-3 bg-surface-dark-highlight border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary"
                           placeholder="your@email.com" />
                    <span asp-validation-for="Email" class="text-red-400 text-sm"></span>
                </div>

                <button type="submit" 
                        class="w-full py-3 px-4 bg-primary hover:bg-blue-600 text-white font-medium rounded-lg transition-colors">
                    Gửi yêu cầu
                </button>
            </form>

            <div class="mt-6 text-center">
                <a asp-action="Login" class="text-primary hover:text-blue-400 text-sm">
                    ← Quay lại đăng nhập
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
