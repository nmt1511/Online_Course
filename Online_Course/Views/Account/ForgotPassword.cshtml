@model Online_Course.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-[80vh] flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full">
        <!-- Card Header with Icon -->
        <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-primary/10 mb-4 ring-8 ring-primary/5">
                <span class="material-symbols-outlined text-primary text-4xl">lock_reset</span>
            </div>
            <h2 class="text-3xl font-extrabold text-slate-900 dark:text-white tracking-tight">Quên mật khẩu?</h2>
            <p class="mt-3 text-slate-500 dark:text-text-secondary">
                Đừng lo lắng, hãy nhập email của bạn và chúng tôi sẽ gửi hướng dẫn đặt lại mật khẩu.
            </p>
        </div>

        <div class="bg-white dark:bg-surface-dark rounded-2xl shadow-xl border border-slate-200 dark:border-border-dark overflow-hidden">
            <div class="p-8">
                <form asp-action="ForgotPassword" method="post" class="space-y-6">
                    @Html.AntiForgeryToken()
                    
                    <div asp-validation-summary="ModelOnly" class="p-3 rounded-lg bg-red-50 dark:bg-red-900/20 text-red-600 dark:text-red-400 text-sm"></div>

                    <div class="space-y-2">
                        <label asp-for="Email" class="block text-sm font-semibold text-slate-700 dark:text-slate-300">Email của bạn</label>
                        <div class="relative group">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-slate-400 group-focus-within:text-primary transition-colors">
                                <span class="material-symbols-outlined text-xl">mail</span>
                            </div>
                            <input asp-for="Email" type="email" 
                                   class="block w-full pl-10 pr-4 py-3 bg-slate-50 dark:bg-background-dark/50 border border-slate-200 dark:border-slate-700 rounded-xl text-slate-900 dark:text-white placeholder-slate-400 focus:outline-none focus:border-primary focus:ring-2 focus:ring-primary/20 transition-all duration-200"
                                   placeholder="name@example.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-red-500 text-xs font-medium"></span>
                    </div>

                    <button type="submit" 
                            class="w-full py-3.5 px-4 bg-primary hover:bg-blue-600 text-white font-bold rounded-xl shadow-lg shadow-primary/25 hover:shadow-primary/40 active:transform active:scale-[0.98] transition-all duration-200 flex items-center justify-center gap-2">
                        <span>Gửi hướng dẫn</span>
                        <span class="material-symbols-outlined text-xl">send</span>
                    </button>
                </form>
            </div>

            <div class="px-8 py-4 bg-slate-50 dark:bg-background-dark/30 border-t border-slate-100 dark:border-border-dark flex justify-center">
                <a asp-action="Login" class="inline-flex items-center gap-2 text-primary hover:text-blue-400 font-semibold text-sm transition-colors group">
                    <span class="material-symbols-outlined text-sm group-hover:-translate-x-1 transition-transform">arrow_back</span>
                    Quay lại đăng nhập
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
