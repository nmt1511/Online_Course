@model Online_Course.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div class="text-center">
            <h2 class="text-3xl font-bold text-white">Đặt lại mật khẩu</h2>
            <p class="mt-2 text-slate-400">Nhập mật khẩu mới cho tài khoản của bạn</p>
        </div>

        <div class="bg-surface-dark rounded-xl p-8 border border-slate-700">
            <form asp-action="ResetPassword" method="post" class="space-y-6">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Token" />
                <input type="hidden" asp-for="Email" />
                
                <div asp-validation-summary="ModelOnly" class="text-red-400 text-sm"></div>

                <div>
                    <label class="block text-sm font-medium text-slate-300 mb-2">Email</label>
                    <input type="text" value="@Model.Email" disabled
                           class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-slate-400" />
                </div>

                <div>
                    <label asp-for="NewPassword" class="block text-sm font-medium text-slate-300 mb-2">Mật khẩu mới</label>
                    <input asp-for="NewPassword" type="password" 
                           class="w-full px-4 py-3 bg-surface-dark-highlight border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary"
                           placeholder="••••••••" />
                    <span asp-validation-for="NewPassword" class="text-red-400 text-sm"></span>
                </div>

                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-slate-300 mb-2">Xác nhận mật khẩu</label>
                    <input asp-for="ConfirmPassword" type="password" 
                           class="w-full px-4 py-3 bg-surface-dark-highlight border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary"
                           placeholder="••••••••" />
                    <span asp-validation-for="ConfirmPassword" class="text-red-400 text-sm"></span>
                </div>

                <button type="submit" 
                        class="w-full py-3 px-4 bg-primary hover:bg-blue-600 text-white font-medium rounded-lg transition-colors">
                    Đặt lại mật khẩu
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
