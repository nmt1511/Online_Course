@model Online_Course.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-[80vh] flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full">
        <!-- Header -->
        <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-primary/10 mb-4 ring-8 ring-primary/5">
                <span class="material-symbols-outlined text-primary text-4xl">lock_open</span>
            </div>
            <h2 class="text-3xl font-extrabold text-slate-900 dark:text-white tracking-tight">Đặt lại mật khẩu</h2>
            <p class="mt-3 text-slate-500 dark:text-text-secondary">
                Tạo mật khẩu mới mạnh mẽ để bảo vệ tài khoản của bạn.
            </p>
        </div>

        <div class="bg-white dark:bg-surface-dark rounded-2xl shadow-xl border border-slate-200 dark:border-border-dark overflow-hidden">
            <div class="p-8">
                <form asp-action="ResetPassword" method="post" class="space-y-5">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Token" />
                    <input type="hidden" asp-for="Email" />
                    
                    <div asp-validation-summary="ModelOnly" class="p-3 rounded-lg bg-red-50 dark:bg-red-900/20 text-red-600 dark:text-red-400 text-sm"></div>

                    <!-- Read-only Email Field -->
                    <div class="space-y-1">
                        <label class="block text-xs font-bold text-slate-400 uppercase tracking-wider">Tài khoản</label>
                        <div class="flex items-center gap-3 px-4 py-3 bg-slate-50 dark:bg-background-dark/50 border border-slate-200 dark:border-slate-700 rounded-xl text-slate-500">
                            <span class="material-symbols-outlined text-xl">alternate_email</span>
                            <span class="font-medium">@Model.Email</span>
                        </div>
                    </div>

                    <!-- New Password Field -->
                    <div class="space-y-2">
                        <label asp-for="NewPassword" class="block text-sm font-semibold text-slate-700 dark:text-slate-300">Mật khẩu mới</label>
                        <div class="relative group">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-slate-400 group-focus-within:text-primary transition-colors">
                                <span class="material-symbols-outlined text-xl">lock</span>
                            </div>
                            <input asp-for="NewPassword" type="password" 
                                   style="font-family: system-ui, -apple-system, 'Segoe UI', Roboto, sans-serif !important;"
                                   class="password-input block w-full pl-10 pr-12 py-3 bg-slate-50 dark:bg-background-dark/50 border border-slate-200 dark:border-slate-700 rounded-xl text-slate-900 dark:text-white placeholder-slate-400 focus:outline-none focus:border-primary focus:ring-2 focus:ring-primary/20 transition-all duration-200"
                                   placeholder="••••••••" />
                            <button type="button" class="toggle-password absolute inset-y-0 right-0 pr-3 flex items-center text-slate-400 hover:text-primary transition-colors">
                                <span class="material-symbols-outlined text-xl">visibility</span>
                            </button>
                        </div>
                        <span asp-validation-for="NewPassword" class="text-red-500 text-xs font-medium"></span>
                    </div>

                    <!-- Confirm Password Field -->
                    <div class="space-y-2">
                        <label asp-for="ConfirmPassword" class="block text-sm font-semibold text-slate-700 dark:text-slate-300">Xác nhận mật khẩu mới</label>
                        <div class="relative group">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-slate-400 group-focus-within:text-primary transition-colors">
                                <span class="material-symbols-outlined text-xl">verified_user</span>
                            </div>
                            <input asp-for="ConfirmPassword" type="password" 
                                   style="font-family: system-ui, -apple-system, 'Segoe UI', Roboto, sans-serif !important;"
                                   class="password-input block w-full pl-10 pr-12 py-3 bg-slate-50 dark:bg-background-dark/50 border border-slate-200 dark:border-slate-700 rounded-xl text-slate-900 dark:text-white placeholder-slate-400 focus:outline-none focus:border-primary focus:ring-2 focus:ring-primary/20 transition-all duration-200"
                                   placeholder="••••••••" />
                            <button type="button" class="toggle-password absolute inset-y-0 right-0 pr-3 flex items-center text-slate-400 hover:text-primary transition-colors">
                                <span class="material-symbols-outlined text-xl">visibility</span>
                            </button>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs font-medium"></span>
                    </div>

                    <button type="submit" 
                            class="w-full mt-4 py-3.5 px-4 bg-primary hover:bg-blue-600 text-white font-bold rounded-xl shadow-lg shadow-primary/25 hover:shadow-primary/40 active:transform active:scale-[0.98] transition-all duration-200 flex items-center justify-center gap-2">
                        <span>Cập nhật mật khẩu</span>
                        <span class="material-symbols-outlined text-xl">check_circle</span>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            $('.toggle-password').click(function() {
                const input = $(this).closest('.relative').find('.password-input');
                const icon = $(this).find('.material-symbols-outlined');
                
                if (input.attr('type') === 'password') {
                    input.attr('type', 'text');
                    icon.text('visibility_off');
                    // Reset font when showing text
                    input.css('font-family', '');
                } else {
                    input.attr('type', 'password');
                    icon.text('visibility');
                    // Apply system font for dots
                    input.css('font-family', "system-ui, -apple-system, 'Segoe UI', Roboto, sans-serif");
                }
            });
        });
    </script>
}
