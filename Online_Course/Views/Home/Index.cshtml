@model Online_Course.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Section -->
<section class="relative bg-gradient-to-br from-primary/5 via-white dark:via-background-dark to-blue-50 dark:to-background-dark py-16 md:py-20 overflow-hidden">
    <div class="absolute inset-0 overflow-hidden">
        <div class="absolute -top-40 -right-40 w-80 h-80 bg-primary/10 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-blue-500/10 rounded-full blur-3xl"></div>
    </div>
    <div class="max-w-7xl mx-auto px-4 md:px-10 relative">
        <div class="grid md:grid-cols-2 gap-12 items-center">
            <div class="space-y-6">
                <div class="inline-flex items-center gap-2 px-4 py-2 bg-primary/10 rounded-full text-primary text-sm font-medium">
                    <span class="material-symbols-outlined text-[16px]">auto_awesome</span>
                    Nền tảng học tập #1 Việt Nam
                </div>
                <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight text-slate-900 dark:text-white">
                    Học tập trực tuyến
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-blue-600">không giới hạn</span>
                </h1>
                <p class="text-lg text-gray-600 dark:text-text-secondary leading-relaxed max-w-lg">
                    Khám phá hàng nghìn khóa học chất lượng cao từ các giảng viên hàng đầu. 
                    Nâng cao kỹ năng và phát triển sự nghiệp của bạn ngay hôm nay.
                </p>
                <div class="flex flex-wrap gap-4">
                    <a asp-area="Student" asp-controller="Courses" asp-action="Index" 
                       class="inline-flex items-center gap-2 px-6 py-3.5 bg-primary hover:bg-blue-600 text-white font-semibold rounded-xl transition-all shadow-lg shadow-primary/25 hover:shadow-xl hover:shadow-primary/30 hover:-translate-y-0.5">
                        <span class="material-symbols-outlined">school</span>
                        Khám phá khóa học
                    </a>
                    @if (User.Identity?.IsAuthenticated != true)
                    {
                        <a asp-area="" asp-controller="Account" asp-action="Register" 
                           class="inline-flex items-center gap-2 px-6 py-3.5 border-2 border-primary text-primary hover:bg-primary hover:text-white font-semibold rounded-xl transition-all">
                            Đăng ký miễn phí
                        </a>
                    }
                </div>
                <!-- Stats -->
                <div class="flex items-center gap-8 pt-4">
                    <div>
                        <p class="text-2xl font-bold text-slate-900 dark:text-white">@Model.TotalCourses+</p>
                        <p class="text-sm text-gray-500 dark:text-text-secondary">Khóa học</p>
                    </div>
                    <div class="w-px h-10 bg-gray-200 dark:bg-border-dark"></div>
                    <div>
                        <p class="text-2xl font-bold text-slate-900 dark:text-white">@Model.TotalCategories</p>
                        <p class="text-sm text-gray-500 dark:text-text-secondary">Danh mục</p>
                    </div>
                    <div class="w-px h-10 bg-gray-200 dark:bg-border-dark"></div>
                    <div>
                        <p class="text-2xl font-bold text-slate-900 dark:text-white">24/7</p>
                        <p class="text-sm text-gray-500 dark:text-text-secondary">Hỗ trợ</p>
                    </div>
                </div>
            </div>
            <div class="hidden md:flex justify-center">
                <div class="relative">
                    <div class="w-72 h-72 lg:w-96 lg:h-96 bg-gradient-to-br from-primary/20 to-blue-500/20 rounded-3xl flex items-center justify-center rotate-3 hover:rotate-0 transition-transform duration-500">
                        <div class="w-64 h-64 lg:w-80 lg:h-80 bg-white dark:bg-surface-dark rounded-2xl shadow-2xl flex items-center justify-center -rotate-3 hover:rotate-0 transition-transform duration-500">
                            <span class="material-symbols-outlined text-[120px] lg:text-[150px] text-primary">school</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Categories Section -->
<section class="py-12 bg-white dark:bg-background-dark border-b border-gray-100 dark:border-border-dark">
    <div class="max-w-7xl mx-auto px-4 md:px-10">
        <div class="flex flex-wrap justify-center gap-3">
            @if (Model.Categories.Any())
            {
                @foreach (var category in Model.Categories.Take(8))
                {
                    <a asp-area="Student" asp-controller="Courses" asp-action="Index" asp-route-category="@category.Name"
                       class="inline-flex items-center gap-2 px-5 py-2.5 bg-gray-100 dark:bg-surface-dark rounded-full text-sm font-medium text-slate-700 dark:text-slate-300 hover:bg-primary hover:text-white transition-all">
                        <span class="material-symbols-outlined text-[18px]">category</span>
                        @category.Name
                    </a>
                }
            }
        </div>
    </div>
</section>


<!-- Featured Courses Section -->
<section class="py-16 bg-gray-50 dark:bg-surface-dark">
    <div class="max-w-7xl mx-auto px-4 md:px-10">
        <div class="flex flex-col md:flex-row md:items-end justify-between gap-4 mb-10">
            <div>
                <h2 class="text-3xl font-bold text-slate-900 dark:text-white mb-2">Khóa học nổi bật</h2>
                <p class="text-gray-600 dark:text-text-secondary">Các khóa học được yêu thích nhất trên nền tảng</p>
            </div>
            <a asp-area="Student" asp-controller="Courses" asp-action="Index" 
               class="inline-flex items-center gap-2 text-primary hover:text-blue-600 font-medium transition-colors">
                Xem tất cả khóa học
                <span class="material-symbols-outlined text-[18px]">arrow_forward</span>
            </a>
        </div>
        
        @if (Model.FeaturedCourses.Any())
        {
            <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
                @foreach (var course in Model.FeaturedCourses)
                {
                    <a asp-area="Student" asp-controller="Courses" asp-action="Details" asp-route-id="@course.CourseId"
                       class="group bg-white dark:bg-background-dark rounded-2xl border border-gray-200 dark:border-border-dark overflow-hidden hover:shadow-xl hover:border-primary/30 transition-all duration-300 hover:-translate-y-1">
                        <!-- Thumbnail -->
                        <div class="aspect-video bg-gradient-to-br from-primary/20 to-blue-500/20 relative overflow-hidden">
                            @if (!string.IsNullOrEmpty(course.ThumbnailUrl))
                            {
                                <div class="w-full h-full bg-center bg-no-repeat bg-cover group-hover:scale-105 transition-transform duration-500"
                                     style="background-image: url('@course.ThumbnailUrl');"></div>
                            }
                            else
                            {
                                <div class="w-full h-full flex items-center justify-center">
                                    <span class="material-symbols-outlined text-[48px] text-primary/50">play_circle</span>
                                </div>
                            }
                            <div class="absolute top-3 left-3">
                                <span class="px-2.5 py-1 bg-white/90 dark:bg-surface-dark/90 backdrop-blur-sm rounded-lg text-xs font-medium text-slate-700 dark:text-slate-300">
                                    @course.CategoryName
                                </span>
                            </div>
                        </div>
                        <!-- Content -->
                        <div class="p-4">
                            <h3 class="font-semibold text-slate-900 dark:text-white mb-2 line-clamp-2 group-hover:text-primary transition-colors">
                                @course.Title
                            </h3>
                            <p class="text-sm text-gray-500 dark:text-text-secondary mb-3 line-clamp-2">
                                @(string.IsNullOrEmpty(course.Description) ? "Khóa học chất lượng cao" : course.Description)
                            </p>
                            <div class="flex items-center justify-between text-sm">
                                <div class="flex items-center gap-1.5 text-gray-500 dark:text-text-secondary">
                                    <span class="material-symbols-outlined text-[16px]">person</span>
                                    <span class="truncate max-w-[100px]">@course.InstructorName</span>
                                </div>
                                <div class="flex items-center gap-1.5 text-gray-500 dark:text-text-secondary">
                                    <span class="material-symbols-outlined text-[16px]">play_lesson</span>
                                    <span>@course.LessonCount bài</span>
                                </div>
                            </div>
                        </div>
                    </a>
                }
            </div>
        }
        else
        {
            <div class="text-center py-12">
                <div class="w-20 h-20 bg-gray-100 dark:bg-surface-dark rounded-full flex items-center justify-center mx-auto mb-4">
                    <span class="material-symbols-outlined text-[40px] text-gray-400">school</span>
                </div>
                <h3 class="text-lg font-medium text-slate-900 dark:text-white mb-2">Chưa có khóa học nào</h3>
                <p class="text-gray-500 dark:text-text-secondary">Các khóa học sẽ sớm được cập nhật</p>
            </div>
        }
    </div>
</section>

<!-- Features Section -->
<section class="py-16 bg-white dark:bg-background-dark">
    <div class="max-w-7xl mx-auto px-4 md:px-10">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold mb-4 text-slate-900 dark:text-white">Tại sao chọn EduTech?</h2>
            <p class="text-gray-600 dark:text-text-secondary max-w-2xl mx-auto">
                Nền tảng học tập trực tuyến hàng đầu với nhiều tính năng vượt trội
            </p>
        </div>
        <div class="grid md:grid-cols-3 gap-8">
            <div class="group bg-gradient-to-br from-blue-50 to-white dark:from-surface-dark dark:to-background-dark p-8 rounded-2xl border border-gray-200 dark:border-border-dark hover:border-primary/50 transition-all hover:-translate-y-1">
                <div class="w-16 h-16 bg-primary/20 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
                    <span class="material-symbols-outlined text-primary text-[32px]">play_circle</span>
                </div>
                <h3 class="text-xl font-bold mb-3 text-slate-900 dark:text-white">Video chất lượng cao</h3>
                <p class="text-gray-600 dark:text-text-secondary leading-relaxed">Nội dung video được sản xuất chuyên nghiệp, dễ hiểu và thực tế.</p>
            </div>
            <div class="group bg-gradient-to-br from-green-50 to-white dark:from-surface-dark dark:to-background-dark p-8 rounded-2xl border border-gray-200 dark:border-border-dark hover:border-green-500/50 transition-all hover:-translate-y-1">
                <div class="w-16 h-16 bg-green-500/20 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
                    <span class="material-symbols-outlined text-green-500 text-[32px]">verified</span>
                </div>
                <h3 class="text-xl font-bold mb-3 text-slate-900 dark:text-white">Giảng viên uy tín</h3>
                <p class="text-gray-600 dark:text-text-secondary leading-relaxed">Đội ngũ giảng viên giàu kinh nghiệm, chuyên môn cao trong lĩnh vực.</p>
            </div>
            <div class="group bg-gradient-to-br from-orange-50 to-white dark:from-surface-dark dark:to-background-dark p-8 rounded-2xl border border-gray-200 dark:border-border-dark hover:border-orange-500/50 transition-all hover:-translate-y-1">
                <div class="w-16 h-16 bg-orange-500/20 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
                    <span class="material-symbols-outlined text-orange-500 text-[32px]">schedule</span>
                </div>
                <h3 class="text-xl font-bold mb-3 text-slate-900 dark:text-white">Học mọi lúc mọi nơi</h3>
                <p class="text-gray-600 dark:text-text-secondary leading-relaxed">Truy cập khóa học 24/7 trên mọi thiết bị, học theo tiến độ riêng.</p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-20 bg-gradient-to-r from-primary via-blue-600 to-primary relative overflow-hidden">
    <div class="absolute inset-0">
        <div class="absolute top-0 left-1/4 w-64 h-64 bg-white/10 rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 right-1/4 w-64 h-64 bg-white/10 rounded-full blur-3xl"></div>
    </div>
    <div class="max-w-4xl mx-auto px-4 md:px-10 text-center relative">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Sẵn sàng bắt đầu học?</h2>
        <p class="text-white/80 mb-8 text-lg max-w-2xl mx-auto">
            Tham gia cùng hàng nghìn học viên đang phát triển kỹ năng mỗi ngày. Bắt đầu hành trình học tập của bạn ngay hôm nay!
        </p>
        @if (User.Identity?.IsAuthenticated == true)
        {
            <a asp-area="Student" asp-controller="Courses" asp-action="Index" 
               class="inline-flex items-center gap-2 px-8 py-4 bg-white text-primary font-bold rounded-xl hover:bg-gray-100 transition-all shadow-xl hover:shadow-2xl hover:-translate-y-0.5">
                <span class="material-symbols-outlined">explore</span>
                Khám phá ngay
            </a>
        }
        else
        {
            <div class="flex flex-wrap justify-center gap-4">
                <a asp-area="" asp-controller="Account" asp-action="Register" 
                   class="inline-flex items-center gap-2 px-8 py-4 bg-white text-primary font-bold rounded-xl hover:bg-gray-100 transition-all shadow-xl hover:shadow-2xl hover:-translate-y-0.5">
                    <span class="material-symbols-outlined">person_add</span>
                    Đăng ký miễn phí
                </a>
                <a asp-area="" asp-controller="Account" asp-action="Login" 
                   class="inline-flex items-center gap-2 px-8 py-4 bg-white/10 text-white font-bold rounded-xl hover:bg-white/20 transition-all border border-white/30">
                    <span class="material-symbols-outlined">login</span>
                    Đăng nhập
                </a>
            </div>
        }
    </div>
</section>
