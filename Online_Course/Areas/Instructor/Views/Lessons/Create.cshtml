@model Online_Course.ViewModels.LessonViewModel
@{
    ViewData["Title"] = "Thêm bài học mới";
    Layout = "~/Views/Shared/_InstructorLayout.cshtml";
}

<!-- Breadcrumbs -->
<div class="flex items-center gap-2 text-sm mb-6">
    <a asp-area="Instructor" asp-controller="Courses" asp-action="Index" class="text-gray-500 dark:text-slate-400 hover:text-primary transition-colors">Quản lý khóa học</a>
    <span class="material-symbols-outlined text-gray-400 dark:text-slate-500 text-[16px]">chevron_right</span>
    <a asp-area="Instructor" asp-controller="Courses" asp-action="Edit" asp-route-id="@Model.CourseId" class="text-gray-500 dark:text-slate-400 hover:text-primary transition-colors">@Model.CourseTitle</a>
    <span class="material-symbols-outlined text-gray-400 dark:text-slate-500 text-[16px]">chevron_right</span>
    <a asp-action="Index" asp-route-courseId="@Model.CourseId" class="text-gray-500 dark:text-slate-400 hover:text-primary transition-colors">Bài học</a>
    <span class="material-symbols-outlined text-gray-400 dark:text-slate-500 text-[16px]">chevron_right</span>
    <span class="text-primary font-medium">Thêm mới</span>
</div>

<!-- Header -->
<div class="flex flex-wrap justify-between items-center gap-4 mb-6">
    <div>
        <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Thêm bài học mới</h1>
        <p class="text-gray-500 dark:text-slate-400 text-sm mt-1">Khóa học: @Model.CourseTitle</p>
    </div>
</div>

<!-- Form -->
<form asp-action="Create" method="post" class="max-w-4xl">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="CourseId" />
    
    <div class="bg-white dark:bg-surface-dark rounded-xl border border-gray-200 dark:border-slate-700/50 p-6 space-y-6">
        <!-- Title -->
        <div>
            <label asp-for="Title" class="block text-xs font-semibold text-gray-500 dark:text-slate-400 uppercase tracking-wider mb-2">
                Tiêu đề bài học <span class="text-red-500 dark:text-red-400">*</span>
            </label>
            <input asp-for="Title" 
                   class="w-full bg-gray-50 dark:bg-slate-800/50 text-slate-900 dark:text-white border border-gray-300 dark:border-slate-700 rounded-lg px-4 py-3 focus:ring-2 focus:ring-primary focus:border-primary transition-colors placeholder-gray-400 dark:placeholder-slate-500"
                   placeholder="Nhập tiêu đề bài học..." />
            <span asp-validation-for="Title" class="text-red-500 dark:text-red-400 text-sm mt-1"></span>
        </div>
        
        <!-- Description -->
        <div>
            <label asp-for="Description" class="block text-xs font-semibold text-gray-500 dark:text-slate-400 uppercase tracking-wider mb-2">
                Mô tả bài học
            </label>
            <textarea asp-for="Description" rows="5"
                      class="w-full bg-gray-50 dark:bg-slate-800/50 text-slate-900 dark:text-white border border-gray-300 dark:border-slate-700 rounded-lg px-4 py-3 focus:ring-2 focus:ring-primary focus:border-primary transition-colors placeholder-gray-400 dark:placeholder-slate-500 resize-none"
                      placeholder="Nhập mô tả chi tiết về nội dung bài học..."></textarea>
            <span asp-validation-for="Description" class="text-red-500 dark:text-red-400 text-sm mt-1"></span>
        </div>

        <!-- Video URL -->
        <div>
            <label asp-for="VideoUrl" class="block text-xs font-semibold text-gray-500 dark:text-slate-400 uppercase tracking-wider mb-2">
                <span class="flex items-center gap-2">
                    <span class="material-symbols-outlined text-primary text-[18px]">smart_display</span>
                    Video URL (YouTube/Vimeo)
                </span>
            </label>
            <input asp-for="VideoUrl" 
                   class="w-full bg-gray-50 dark:bg-slate-800/50 text-slate-900 dark:text-white border border-gray-300 dark:border-slate-700 rounded-lg px-4 py-3 focus:ring-2 focus:ring-primary focus:border-primary transition-colors placeholder-gray-400 dark:placeholder-slate-500"
                   placeholder="https://youtube.com/watch?v=..." />
            <span asp-validation-for="VideoUrl" class="text-red-500 dark:text-red-400 text-sm mt-1"></span>
            <p class="text-gray-400 dark:text-slate-500 text-xs mt-2">Hỗ trợ YouTube, Vimeo và các nền tảng video khác</p>
        </div>
        
        <!-- Order Index -->
        <div>
            <label asp-for="OrderIndex" class="block text-xs font-semibold text-gray-500 dark:text-slate-400 uppercase tracking-wider mb-2">
                Thứ tự bài học
            </label>
            <input asp-for="OrderIndex" type="number" min="1"
                   class="w-32 bg-gray-50 dark:bg-slate-800/50 text-slate-900 dark:text-white border border-gray-300 dark:border-slate-700 rounded-lg px-4 py-3 focus:ring-2 focus:ring-primary focus:border-primary transition-colors" />
            <span asp-validation-for="OrderIndex" class="text-red-500 dark:text-red-400 text-sm mt-1"></span>
        </div>
    </div>
    
    <!-- Actions -->
    <div class="flex items-center gap-4 mt-6">
        <button type="submit" 
                class="flex items-center gap-2 px-6 py-3 rounded-lg bg-primary text-white font-medium hover:bg-blue-600 transition-colors shadow-lg shadow-primary/20">
            <span class="material-symbols-outlined text-[18px]">save</span>
            <span>Tạo bài học</span>
        </button>
        <a asp-action="Index" asp-route-courseId="@Model.CourseId" 
           class="flex items-center gap-2 px-6 py-3 rounded-lg border border-gray-300 dark:border-slate-700 text-gray-700 dark:text-slate-300 font-medium hover:bg-gray-100 dark:hover:bg-slate-800 transition-colors">
            <span class="material-symbols-outlined text-[18px]">close</span>
            <span>Hủy</span>
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
