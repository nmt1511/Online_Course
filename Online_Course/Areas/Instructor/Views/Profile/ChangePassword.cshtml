@model Online_Course.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="max-w-2xl mx-auto">
    <div class="flex items-center gap-4 mb-6">
        <a asp-action="Index" class="p-2 text-gray-500 dark:text-slate-400 hover:text-slate-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-slate-700 rounded-lg transition-colors">
            <span class="material-symbols-outlined">arrow_back</span>
        </a>
        <h1 class="text-slate-900 dark:text-white text-xl font-bold">Đổi mật khẩu</h1>
    </div>

    <div class="bg-white dark:bg-surface-dark border border-gray-200 dark:border-slate-700 rounded-xl p-6">
        <form asp-action="ChangePassword" method="post">
            @Html.AntiForgeryToken()

            <div class="space-y-6">
                <div>
                    <label asp-for="CurrentPassword" class="block text-sm font-medium text-slate-900 dark:text-white mb-2">Mật khẩu hiện tại</label>
                    <input asp-for="CurrentPassword" type="password" class="w-full h-12 px-4 bg-gray-50 dark:bg-background-dark border border-gray-300 dark:border-slate-700 rounded-lg text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-primary" />
                    <span asp-validation-for="CurrentPassword" class="text-red-500 dark:text-red-400 text-sm"></span>
                </div>

                <div>
                    <label asp-for="NewPassword" class="block text-sm font-medium text-slate-900 dark:text-white mb-2">Mật khẩu mới</label>
                    <input asp-for="NewPassword" type="password" class="w-full h-12 px-4 bg-gray-50 dark:bg-background-dark border border-gray-300 dark:border-slate-700 rounded-lg text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-primary" />
                    <span asp-validation-for="NewPassword" class="text-red-500 dark:text-red-400 text-sm"></span>
                </div>

                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-slate-900 dark:text-white mb-2">Xác nhận mật khẩu</label>
                    <input asp-for="ConfirmPassword" type="password" class="w-full h-12 px-4 bg-gray-50 dark:bg-background-dark border border-gray-300 dark:border-slate-700 rounded-lg text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-primary" />
                    <span asp-validation-for="ConfirmPassword" class="text-red-500 dark:text-red-400 text-sm"></span>
                </div>

                <div class="flex gap-4 pt-4">
                    <button type="submit" class="flex-1 h-12 bg-primary hover:bg-blue-600 text-white font-bold rounded-lg transition-colors">
                        Đổi mật khẩu
                    </button>
                    <a asp-action="Index" class="flex-1 h-12 bg-gray-200 dark:bg-slate-700 hover:bg-gray-300 dark:hover:bg-slate-600 text-slate-900 dark:text-white font-medium rounded-lg transition-colors flex items-center justify-center">
                        Hủy
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
