@model Online_Course.Areas.Instructor.Controllers.InstructorAnalyticsViewModel
@{
    ViewData["Title"] = "Thống kê & Phân tích";
}

<!-- Stats Overview -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-surface-dark rounded-xl p-6 border border-slate-700">
        <div class="flex items-center gap-4">
            <div class="p-3 bg-primary/20 rounded-lg">
                <span class="material-symbols-outlined text-primary text-2xl">school</span>
            </div>
            <div>
                <p class="text-slate-400 text-sm">Tổng khóa học</p>
                <p class="text-white text-2xl font-bold">@Model.TotalCourses</p>
            </div>
        </div>
    </div>
    
    <div class="bg-surface-dark rounded-xl p-6 border border-slate-700">
        <div class="flex items-center gap-4">
            <div class="p-3 bg-green-500/20 rounded-lg">
                <span class="material-symbols-outlined text-green-500 text-2xl">group</span>
            </div>
            <div>
                <p class="text-slate-400 text-sm">Tổng học viên</p>
                <p class="text-white text-2xl font-bold">@Model.TotalStudents</p>
            </div>
        </div>
    </div>
    
    <div class="bg-surface-dark rounded-xl p-6 border border-slate-700">
        <div class="flex items-center gap-4">
            <div class="p-3 bg-orange-500/20 rounded-lg">
                <span class="material-symbols-outlined text-orange-500 text-2xl">menu_book</span>
            </div>
            <div>
                <p class="text-slate-400 text-sm">Tổng bài học</p>
                <p class="text-white text-2xl font-bold">@Model.TotalLessons</p>
            </div>
        </div>
    </div>
    
    <div class="bg-surface-dark rounded-xl p-6 border border-slate-700">
        <div class="flex items-center gap-4">
            <div class="p-3 bg-purple-500/20 rounded-lg">
                <span class="material-symbols-outlined text-purple-500 text-2xl">emoji_events</span>
            </div>
            <div>
                <p class="text-slate-400 text-sm">Tỷ lệ hoàn thành</p>
                <p class="text-white text-2xl font-bold">@Model.AverageCompletionRate%</p>
            </div>
        </div>
    </div>
</div>

<!-- Course Performance Table -->
<div class="bg-surface-dark rounded-xl border border-slate-700 overflow-hidden">
    <div class="p-6 border-b border-slate-700">
        <h2 class="text-white text-lg font-bold">Hiệu suất khóa học</h2>
        <p class="text-slate-400 text-sm mt-1">Chi tiết thống kê từng khóa học</p>
    </div>
    
    @if (Model.Courses.Any())
    {
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-slate-800/50">
                    <tr>
                        <th class="text-left text-slate-400 text-xs font-medium uppercase tracking-wider px-6 py-4">Khóa học</th>
                        <th class="text-center text-slate-400 text-xs font-medium uppercase tracking-wider px-4 py-4">Học viên</th>
                        <th class="text-center text-slate-400 text-xs font-medium uppercase tracking-wider px-4 py-4">Bài học</th>
                        <th class="text-center text-slate-400 text-xs font-medium uppercase tracking-wider px-4 py-4">Tiến độ TB</th>
                        <th class="text-center text-slate-400 text-xs font-medium uppercase tracking-wider px-4 py-4">Hoàn thành</th>
                        <th class="text-center text-slate-400 text-xs font-medium uppercase tracking-wider px-4 py-4">Trạng thái</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-700">
                    @foreach (var course in Model.Courses)
                    {
                        <tr class="hover:bg-slate-800/30 transition-colors">
                            <td class="px-6 py-4">
                                <div class="flex flex-col">
                                    <span class="text-white font-medium">@course.Title</span>
                                    <span class="text-slate-400 text-xs">@course.Category</span>
                                </div>
                            </td>
                            <td class="text-center px-4 py-4">
                                <span class="text-white font-medium">@course.TotalStudents</span>
                            </td>
                            <td class="text-center px-4 py-4">
                                <span class="text-white">@course.TotalLessons</span>
                            </td>
                            <td class="text-center px-4 py-4">
                                <div class="flex items-center justify-center gap-2">
                                    <div class="w-16 h-2 bg-slate-700 rounded-full overflow-hidden">
                                        <div class="h-full bg-primary rounded-full" style="width: @course.AverageProgress%"></div>
                                    </div>
                                    <span class="text-white text-sm">@course.AverageProgress%</span>
                                </div>
                            </td>
                            <td class="text-center px-4 py-4">
                                <span class="text-green-500 font-medium">@course.CompletedStudents</span>
                            </td>
                            <td class="text-center px-4 py-4">
                                @if (course.IsPublished)
                                {
                                    <span class="px-2 py-1 bg-green-500/20 text-green-500 text-xs font-medium rounded-full">Đã xuất bản</span>
                                }
                                else
                                {
                                    <span class="px-2 py-1 bg-yellow-500/20 text-yellow-500 text-xs font-medium rounded-full">Nháp</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="p-12 text-center">
            <span class="material-symbols-outlined text-5xl text-slate-600 mb-4">analytics</span>
            <p class="text-slate-400">Chưa có dữ liệu thống kê</p>
            <a asp-controller="Courses" asp-action="Create" class="inline-flex items-center gap-2 mt-4 px-4 py-2 bg-primary hover:bg-blue-600 text-white text-sm font-medium rounded-lg transition-colors">
                <span class="material-symbols-outlined text-sm">add</span>
                Tạo khóa học đầu tiên
            </a>
        </div>
    }
</div>
