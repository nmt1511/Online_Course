@model Online_Course.ViewModels.CourseDetailViewModel
@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_InstructorLayout.cshtml";
}

<div class="flex flex-col gap-6">
    <!-- Page Header -->
    <div class="flex items-center gap-4">
        <a asp-action="Index" class="p-2 text-gray-500 dark:text-slate-400 hover:text-slate-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-slate-800 rounded-lg transition-colors">
            <span class="material-symbols-outlined">arrow_back</span>
        </a>
        <div class="flex-1">
            <h1 class="text-slate-900 dark:text-white text-2xl font-bold">@Model.Title</h1>
            <p class="text-gray-500 dark:text-slate-400 text-sm">Chi tiết khóa học</p>
        </div>
        <div class="flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.CourseId" class="flex items-center gap-2 px-4 py-2.5 bg-primary hover:bg-blue-600 text-white text-sm font-medium rounded-lg transition-colors">
                <span class="material-symbols-outlined text-[18px]">edit</span>
                Chỉnh sửa
            </a>
            <a asp-area="Instructor" asp-controller="Lessons" asp-action="Index" asp-route-courseId="@Model.CourseId" class="flex items-center gap-2 px-4 py-2.5 bg-gray-100 dark:bg-slate-800 hover:bg-gray-200 dark:hover:bg-slate-700 text-gray-700 dark:text-slate-300 text-sm font-medium rounded-lg transition-colors border border-gray-200 dark:border-slate-700">
                <span class="material-symbols-outlined text-[18px]">menu_book</span>
                Quản lý bài học
            </a>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Left Column: Course Info -->
        <div class="lg:col-span-1 flex flex-col">
            <!-- Thumbnail Card -->
            <div class="bg-white dark:bg-surface-dark rounded-xl border border-gray-200 dark:border-slate-800 overflow-hidden flex flex-col h-full">
                <div class="h-48 bg-cover bg-center bg-gray-200 dark:bg-slate-700 relative flex-shrink-0" style="background-image: url('@(string.IsNullOrEmpty(Model.ThumbnailUrl) ? "/images/default-course.png" : Model.ThumbnailUrl)');">
                    <div class="absolute top-3 left-3 flex items-center gap-2 flex-wrap">
                        <span class="@Model.StatusColor text-white text-xs font-bold px-2.5 py-1 rounded">@Model.StatusText</span>
                        @if (!string.IsNullOrEmpty(Model.CategoryName))
                        {
                            <span class="bg-white/90 dark:bg-slate-800/90 text-primary text-xs font-semibold px-2.5 py-1 rounded backdrop-blur-sm">@Model.CategoryName</span>
                        }
                    </div>
                </div>
                <div class="p-5 flex-1 flex flex-col">
                    <p class="text-gray-600 dark:text-slate-400 text-sm mb-4 flex-1">@Model.Description</p>
                    
                    <!-- Course Type Badge -->
                    <div class="flex items-center gap-2 mb-4">
                        <div class="flex items-center gap-1.5 px-3 py-1.5 @(Model.IsFixedTime ? "bg-orange-500/10 text-orange-600 dark:text-orange-400" : "bg-emerald-500/10 text-emerald-600 dark:text-emerald-400") rounded-lg">
                            <span class="material-symbols-outlined text-[16px]">@Model.CourseTypeIcon</span>
                            <span class="text-xs font-semibold">@Model.CourseTypeText</span>
                        </div>
                    </div>
                    
                    @if (Model.IsFixedTime)
                    {
                        <!-- Date Information -->
                        <div class="space-y-3 mb-4 p-3 bg-gray-50 dark:bg-slate-800/50 rounded-lg">
                            <h4 class="text-xs font-bold text-gray-500 dark:text-slate-400 uppercase tracking-wider flex items-center gap-1.5">
                                <span class="material-symbols-outlined text-[14px]">calendar_month</span>
                                Thời gian khóa học
                            </h4>
                            
                            <!-- Registration Period -->
                            <div class="flex items-start gap-2">
                                <div class="size-6 rounded bg-blue-500/10 flex items-center justify-center flex-shrink-0 mt-0.5">
                                    <span class="material-symbols-outlined text-blue-500 text-[14px]">app_registration</span>
                                </div>
                                <div>
                                    <p class="text-xs font-medium text-gray-500 dark:text-slate-400">Đăng ký</p>
                                    <p class="text-sm text-slate-900 dark:text-white">
                                        @(Model.RegistrationStartDate?.ToString("dd/MM/yyyy") ?? "N/A") - @(Model.RegistrationEndDate?.ToString("dd/MM/yyyy") ?? "N/A")
                                    </p>
                                </div>
                            </div>
                            
                            <!-- Course Period -->
                            <div class="flex items-start gap-2">
                                <div class="size-6 rounded bg-green-500/10 flex items-center justify-center flex-shrink-0 mt-0.5">
                                    <span class="material-symbols-outlined text-green-500 text-[14px]">school</span>
                                </div>
                                <div>
                                    <p class="text-xs font-medium text-gray-500 dark:text-slate-400">Học tập</p>
                                    <p class="text-sm text-slate-900 dark:text-white">
                                        @(Model.StartDate?.ToString("dd/MM/yyyy") ?? "N/A") - @(Model.EndDate?.ToString("dd/MM/yyyy") ?? "N/A")
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                    
                    <div class="flex items-center gap-6 pt-4 border-t border-gray-200 dark:border-slate-700">
                        <div class="flex items-center gap-2">
                            <div class="size-9 rounded-lg bg-blue-500/10 flex items-center justify-center">
                                <span class="material-symbols-outlined text-blue-500 text-[20px]">play_lesson</span>
                            </div>
                            <div>
                                <p class="text-lg font-bold text-slate-900 dark:text-white">@Model.TotalLessons</p>
                                <p class="text-xs text-gray-500 dark:text-slate-400">Bài học</p>
                            </div>
                        </div>
                        <div class="flex items-center gap-2">
                            <div class="size-9 rounded-lg bg-green-500/10 flex items-center justify-center">
                                <span class="material-symbols-outlined text-green-500 text-[20px]">group</span>
                            </div>
                            <div>
                                <p class="text-lg font-bold text-slate-900 dark:text-white">@Model.TotalStudents</p>
                                <p class="text-xs text-gray-500 dark:text-slate-400">Học viên</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <!-- Right Column: Lessons -->
        <div class="lg:col-span-2">
            <div class="bg-white dark:bg-surface-dark rounded-xl border border-gray-200 dark:border-slate-800 overflow-hidden h-full">
                <div class="flex items-center justify-between p-5 border-b border-gray-200 dark:border-slate-700">
                    <h2 class="text-lg font-bold text-slate-900 dark:text-white flex items-center gap-2">
                        <span class="material-symbols-outlined text-primary">play_lesson</span>
                        Danh sách bài học
                    </h2>
                    <span class="bg-gray-100 dark:bg-slate-700 text-gray-600 dark:text-slate-300 text-sm font-medium px-3 py-1 rounded-full">@Model.TotalLessons bài</span>
                </div>
                
                @if (Model.Lessons.Any())
                {
                    <div class="divide-y divide-gray-200 dark:divide-slate-700 max-h-[450px] overflow-y-auto">
                        @foreach (var lesson in Model.Lessons)
                        {
                            <div class="flex items-center gap-4 p-4 hover:bg-gray-50 dark:hover:bg-slate-800/50 transition-colors">
                                <div class="size-10 rounded-lg bg-gray-100 dark:bg-slate-700 flex items-center justify-center text-gray-500 dark:text-slate-400 font-bold">
                                    @lesson.OrderIndex
                                </div>
                                <div class="flex-1 min-w-0">
                                    <h4 class="font-medium text-slate-900 dark:text-white truncate">@lesson.Title</h4>
                                    @if (!string.IsNullOrEmpty(lesson.Description))
                                    {
                                        <p class="text-sm text-gray-500 dark:text-slate-400 truncate">@lesson.Description</p>
                                    }
                                </div>
                                <div class="flex items-center gap-3">
                                    <span class="flex items-center gap-1 text-xs font-medium @(lesson.LessonType == LessonType.Pdf ? "text-red-500" : "text-blue-500")">
                                        <span class="material-symbols-outlined text-[16px]">@lesson.LessonTypeIcon</span>
                                        @lesson.LessonTypeText
                                    </span>
                                    @if (!string.IsNullOrEmpty(lesson.ContentUrl))
                                    {
                                        <button onclick="previewLesson('@lesson.ContentUrl', '@lesson.LessonType', '@lesson.Title')" class="p-2 text-gray-400 hover:text-primary hover:bg-primary/10 rounded-lg transition-colors" title="Xem nội dung">
                                            <span class="material-symbols-outlined text-[18px]">visibility</span>
                                        </button>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="p-8 text-center">
                        <span class="material-symbols-outlined text-gray-400 dark:text-slate-500 text-4xl mb-2">school</span>
                        <p class="text-gray-500 dark:text-slate-400">Chưa có bài học nào</p>
                        <a asp-area="Instructor" asp-controller="Lessons" asp-action="Create" asp-route-courseId="@Model.CourseId" class="inline-flex items-center gap-2 mt-4 px-4 py-2 bg-primary hover:bg-blue-600 text-white text-sm font-medium rounded-lg transition-colors">
                            <span class="material-symbols-outlined text-[18px]">add</span>
                            Thêm bài học
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Students Section -->
    <div class="bg-white dark:bg-surface-dark rounded-xl border border-gray-200 dark:border-slate-800 overflow-hidden">
        <div class="flex items-center justify-between p-5 border-b border-gray-200 dark:border-slate-700">
            <h2 class="text-lg font-bold text-slate-900 dark:text-white flex items-center gap-2">
                <span class="material-symbols-outlined text-green-500">group</span>
                Danh sách học viên
                <span class="bg-gray-100 dark:bg-slate-700 text-gray-600 dark:text-slate-300 text-xs font-medium px-2 py-0.5 rounded-full ml-1">Top 5</span>
            </h2>
            <div class="flex items-center gap-3">
                <span class="text-gray-500 dark:text-slate-400 text-sm">@Model.TotalStudents học viên</span>
                <a href="/Instructor/Students?courseId=@Model.CourseId" class="flex items-center gap-1.5 px-3 py-1.5 bg-primary/10 hover:bg-primary hover:text-white text-primary text-sm font-medium rounded-lg transition-colors">
                    <span class="material-symbols-outlined text-[16px]">visibility</span>
                    Xem tất cả
                </a>
            </div>
        </div>
        
        @{
            var topStudents = Model.Students.OrderByDescending(s => s.CompletionPercentage).Take(5);
        }
        
        @if (topStudents.Any())
        {
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-50 dark:bg-slate-800">
                        <tr>
                            <th class="px-5 py-3 text-left text-xs font-bold text-gray-500 dark:text-slate-400 uppercase tracking-wider">Học viên</th>
                            <th class="px-5 py-3 text-left text-xs font-bold text-gray-500 dark:text-slate-400 uppercase tracking-wider hidden md:table-cell">Email</th>
                            <th class="px-5 py-3 text-left text-xs font-bold text-gray-500 dark:text-slate-400 uppercase tracking-wider hidden sm:table-cell">Ngày đăng ký</th>
                            <th class="px-5 py-3 text-left text-xs font-bold text-gray-500 dark:text-slate-400 uppercase tracking-wider">Tiến độ</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200 dark:divide-slate-700">
                        @foreach (var student in topStudents)
                        {
                            <tr class="hover:bg-gray-50 dark:hover:bg-slate-800/50 transition-colors">
                                <td class="px-5 py-4">
                                    <div class="flex items-center gap-3">
                                        <div class="size-9 rounded-full bg-primary/10 flex items-center justify-center text-primary font-bold text-sm">
                                            @student.FullName.Substring(0, Math.Min(2, student.FullName.Length)).ToUpper()
                                        </div>
                                        <span class="font-medium text-slate-900 dark:text-white">@student.FullName</span>
                                    </div>
                                </td>
                                <td class="px-5 py-4 text-sm text-gray-500 dark:text-slate-400 hidden md:table-cell">@student.Email</td>
                                <td class="px-5 py-4 text-sm text-gray-500 dark:text-slate-400 hidden sm:table-cell">@student.EnrolledAt.ToString("dd/MM/yyyy")</td>
                                <td class="px-5 py-4">
                                    <div class="flex items-center gap-2">
                                        <div class="flex-1 h-2 bg-gray-200 dark:bg-slate-700 rounded-full max-w-[100px]">
                                            <div class="h-2 @student.CompletionColor rounded-full transition-all" style="width: @student.CompletionPercentage%"></div>
                                        </div>
                                        <span class="text-sm font-medium text-slate-900 dark:text-white">@student.CompletionPercentage.ToString("F0")%</span>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="p-8 text-center">
                <span class="material-symbols-outlined text-gray-400 dark:text-slate-500 text-4xl mb-2">group_off</span>
                <p class="text-gray-500 dark:text-slate-400">Chưa có học viên nào đăng ký</p>
            </div>
        }
    </div>
</div>

<!-- Lesson Content Modal -->
<div id="lessonModal" class="fixed inset-0 z-[100] hidden">
    <div class="absolute inset-0 bg-slate-900/90 backdrop-blur-md" onclick="closeLessonModal()"></div>
    <div class="absolute inset-3 md:inset-6 lg:inset-10 bg-white dark:bg-[#1a222c] rounded-2xl shadow-2xl flex flex-col overflow-hidden transition-all transform scale-95 opacity-0 duration-300 border border-white/10" id="modalContent">
        <!-- Modal Header: Premium Style -->
        <div class="flex items-center justify-between px-6 h-16 border-b border-gray-100 dark:border-white/5 shrink-0 bg-white/80 dark:bg-[#1a222c]/80 backdrop-blur-md z-10">
            <div class="flex items-center gap-4">
                <div class="size-10 rounded-xl bg-primary/10 flex items-center justify-center shadow-inner">
                    <span class="material-symbols-outlined text-primary text-[24px]" id="modalIcon">play_lesson</span>
                </div>
                <div class="flex flex-col">
                    <h3 class="text-base font-bold text-slate-900 dark:text-white leading-tight" id="modalTitle">Tiêu đề bài học</h3>
                    <span class="text-[11px] text-slate-500 dark:text-slate-400 font-medium uppercase tracking-wider" id="modalSubTitle">Đang xem bài học</span>
                </div>
            </div>
            <div class="flex items-center gap-2">
                <button onclick="closeLessonModal()" class="size-10 flex items-center justify-center text-slate-400 hover:text-red-500 hover:bg-red-50 dark:hover:bg-red-500/10 rounded-xl transition-all">
                    <span class="material-symbols-outlined">close</span>
                </button>
            </div>
        </div>
        <!-- Modal Body: Max Space -->
        <div class="flex-1 bg-slate-100 dark:bg-[#0f172a] overflow-hidden relative" id="modalBody">
            <!-- Content will be injected here -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function previewLesson(url, type, title) {
            const modal = document.getElementById('lessonModal');
            const modalContent = document.getElementById('modalContent');
            const modalTitle = document.getElementById('modalTitle');
            const modalBody = document.getElementById('modalBody');
            const modalIcon = document.getElementById('modalIcon');
            const modalSubTitle = document.getElementById('modalSubTitle');

            modalTitle.innerText = title;
            modalBody.innerHTML = '';

            // Loading state
            modalBody.innerHTML = `
                <div class="absolute inset-0 flex items-center justify-center">
                    <div class="flex flex-col items-center gap-3">
                        <div class="size-12 border-4 border-primary/20 border-t-primary rounded-full animate-spin"></div>
                        <p class="text-sm text-slate-500 font-medium">Đang tải nội dung...</p>
                    </div>
                </div>`;

            // Set UI based on type and dynamic width
            if (type === 'Pdf') {
                modalIcon.innerText = 'description';
                modalSubTitle.innerText = 'Tài liệu PDF';
                
                // Narrower width for PDF to focus on single page readability
                modalContent.classList.remove('md:inset-6', 'lg:inset-10');
                modalContent.classList.add('md:max-w-4xl', 'md:mx-auto', 'md:h-[90vh]', 'md:relative', 'md:inset-auto', 'md:mt-10');
            } else {
                modalIcon.innerText = 'play_circle';
                modalSubTitle.innerText = 'Video bài học';
                
                // Wider for Video
                modalContent.classList.add('md:inset-6', 'lg:inset-10');
                modalContent.classList.remove('md:max-w-4xl', 'md:mx-auto', 'md:h-[90vh]', 'md:relative', 'md:inset-auto', 'md:mt-10');
            }

            // Inject Content after a tiny delay for smoother transition
            setTimeout(() => {
                if (type === 'Pdf') {
                    // Optimized PDF view: Using native viewer with full toolbar enabled
                    // If you want Google Docs Viewer (external), use: https://docs.google.com/viewer?url=${encodeURIComponent(fullUrl)}&embedded=true
                    modalBody.innerHTML = `<iframe src="${url}#view=FitH&toolbar=1" class="w-full h-full border-none bg-slate-500" title="${title}"></iframe>`;
                } else if (type === 'Video') {
                    if (url.includes('youtube.com') || url.includes('youtu.be')) {
                        let videoId = '';
                        if (url.includes('watch?v=')) {
                            videoId = url.split('v=')[1].split('&')[0];
                        } else if (url.includes('youtu.be/')) {
                            videoId = url.split('youtu.be/')[1].split('?')[0];
                        }
                        modalBody.innerHTML = `<iframe class="w-full h-full" src="https://www.youtube.com/embed/${videoId}?autoplay=1&rel=0&modestbranding=1" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>`;
                    } else {
                        modalBody.innerHTML = `
                            <div class="w-full h-full flex items-center justify-center bg-black">
                                <video class="max-w-full max-h-full" controls autoplay>
                                    <source src="${url}" type="video/mp4">
                                    Trình duyệt của bạn không hỗ trợ video.
                                </video>
                            </div>`;
                    }
                }
            }, 100);

            // Show Modal
            modal.classList.remove('hidden');
            setTimeout(() => {
                modalContent.classList.remove('scale-95', 'opacity-0');
                modalContent.classList.add('scale-100', 'opacity-100');
            }, 10);
            
            document.body.style.overflow = 'hidden';
        }

        function closeLessonModal() {
            const modal = document.getElementById('lessonModal');
            const modalContent = document.getElementById('modalContent');
            const modalBody = document.getElementById('modalBody');

            modalContent.classList.remove('scale-100', 'opacity-100');
            modalContent.classList.add('scale-95', 'opacity-0');

            setTimeout(() => {
                modal.classList.add('hidden');
                modalBody.innerHTML = '';
                document.body.style.overflow = '';
                
                // Reset classes for next opening
                modalContent.classList.add('md:inset-6', 'lg:inset-10');
                modalContent.classList.remove('md:max-w-4xl', 'md:mx-auto', 'md:h-[90vh]', 'md:relative', 'md:inset-auto', 'md:mt-10');
            }, 300);
        }

        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closeLessonModal();
            }
        });
    </script>
}
