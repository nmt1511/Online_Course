@model Online_Course.ViewModels.CourseIndexViewModel
@{
    ViewData["Title"] = "Quản lý khóa học";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-[1400px] mx-auto flex flex-col gap-8">
    <!-- Page Header -->
    <div class="flex flex-col md:flex-row md:items-end justify-between gap-4">
        <div class="flex flex-col gap-2">
            <h1 class="text-slate-900 dark:text-white text-3xl md:text-4xl font-black leading-tight tracking-[-0.033em]">Quản lý khóa học</h1>
            <p class="text-gray-500 dark:text-[#9dabb9] text-base font-normal">Quản lý, phân công giảng viên và theo dõi tất cả khóa học trong hệ thống</p>
        </div>
        <a asp-action="Create" class="flex items-center justify-center gap-2 rounded-lg h-12 px-6 bg-primary hover:bg-blue-600 text-white text-sm font-bold shadow-lg shadow-blue-500/20 transition-all">
            <span class="material-symbols-outlined text-[20px]">add</span>
            <span>Tạo khóa học mới</span>
        </a>
    </div>

    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 dark:bg-green-500/20 border border-green-300 dark:border-green-500/30 text-green-700 dark:text-green-400 px-4 py-3 rounded-lg flex items-center gap-2">
            <span class="material-symbols-outlined">check_circle</span>
            <span>@TempData["SuccessMessage"]</span>
        </div>
    }

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="flex flex-col gap-2 rounded-xl p-6 bg-white dark:bg-[#1a222c] border border-gray-200 dark:border-[#283039] shadow-sm">
            <div class="flex justify-between items-start">
                <p class="text-gray-500 dark:text-[#9dabb9] text-sm font-medium">Tổng khóa học</p>
                <span class="material-symbols-outlined text-primary bg-primary/10 p-1.5 rounded-lg text-[20px]">local_library</span>
            </div>
            <div class="flex items-baseline gap-2">
                <p class="text-slate-900 dark:text-white text-3xl font-bold">@Model.TotalCourses</p>
            </div>
        </div>
        <div class="flex flex-col gap-2 rounded-xl p-6 bg-white dark:bg-[#1a222c] border border-gray-200 dark:border-[#283039] shadow-sm">
            <div class="flex justify-between items-start">
                <p class="text-gray-500 dark:text-[#9dabb9] text-sm font-medium">Đã xuất bản</p>
                <span class="material-symbols-outlined text-green-500 dark:text-green-400 bg-green-500/10 p-1.5 rounded-lg text-[20px]">check_circle</span>
            </div>
            <div class="flex items-baseline gap-2">
                <p class="text-slate-900 dark:text-white text-3xl font-bold">@Model.PublishedCourses</p>
            </div>
        </div>
        <div class="flex flex-col gap-2 rounded-xl p-6 bg-white dark:bg-[#1a222c] border border-gray-200 dark:border-[#283039] shadow-sm">
            <div class="flex justify-between items-start">
                <p class="text-gray-500 dark:text-[#9dabb9] text-sm font-medium">Bản nháp</p>
                <span class="material-symbols-outlined text-amber-500 dark:text-amber-400 bg-amber-500/10 p-1.5 rounded-lg text-[20px]">edit_note</span>
            </div>
            <div class="flex items-baseline gap-2">
                <p class="text-slate-900 dark:text-white text-3xl font-bold">@Model.DraftCourses</p>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <form method="get" class="flex flex-col lg:flex-row gap-4 bg-white dark:bg-[#1a222c] p-4 rounded-xl border border-gray-200 dark:border-[#283039]">
        <div class="flex-1 relative group">
            <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 dark:text-[#9dabb9] group-focus-within:text-primary transition-colors">
                <span class="material-symbols-outlined">search</span>
            </span>
            <input type="text" name="search" value="@Model.SearchQuery" 
                   class="w-full bg-gray-50 dark:bg-[#101922] border border-gray-300 dark:border-[#283039] text-slate-900 dark:text-white text-sm rounded-lg focus:ring-1 focus:ring-primary focus:border-primary block pl-10 p-2.5 placeholder-gray-400 dark:placeholder-[#9dabb9]/50 transition-all" 
                   placeholder="Tìm kiếm theo tên khóa học..."/>
        </div>
        <div class="flex flex-wrap gap-3">
            <div class="relative min-w-[180px] group">
                <select name="category" 
                        style="-webkit-appearance: none !important; -moz-appearance: none !important; appearance: none !important; background-image: none !important;"
                        class="w-full bg-gray-50 dark:bg-[#101922] border border-gray-300 dark:border-[#283039] text-slate-900 dark:text-white text-sm rounded-lg focus:ring-1 focus:ring-primary focus:border-primary block p-2.5 appearance-none cursor-pointer transition-all outline-none">
                    <option value="">Tất cả danh mục</option>
                    @if (ViewBag.Categories != null)
                    {
                        var categories = ViewBag.Categories as IEnumerable<Online_Course.Models.Category>;
                        if (categories != null)
                        {
                            @foreach (var cat in categories)
                            {
                                <option value="@cat.CategoryId" selected="@(Model.CategoryFilter == cat.CategoryId)">@cat.Name</option>
                            }
                        }
                    }
                </select>
                <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none text-gray-400 dark:text-[#9dabb9]">
                    <span class="material-symbols-outlined text-[20px]">expand_more</span>
                </div>
            </div>
            <div class="relative min-w-[180px] group">
                <select name="status" 
                        style="-webkit-appearance: none !important; -moz-appearance: none !important; appearance: none !important; background-image: none !important;"
                        class="w-full bg-gray-50 dark:bg-[#101922] border border-gray-300 dark:border-[#283039] text-slate-900 dark:text-white text-sm rounded-lg focus:ring-1 focus:ring-primary focus:border-primary block p-2.5 appearance-none cursor-pointer transition-all outline-none">
                    <option value="">Tất cả trạng thái</option>
                    <option value="published" selected="@(Model.StatusFilter == "published")">Đã xuất bản</option>
                    <option value="draft" selected="@(Model.StatusFilter == "draft")">Bản nháp</option>
                </select>
                <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none text-gray-400 dark:text-[#9dabb9]">
                    <span class="material-symbols-outlined text-[20px]">expand_more</span>
                </div>
            </div>
            <button type="submit" class="flex items-center justify-center gap-2 px-4 py-2.5 bg-gray-100 dark:bg-[#101922] border border-gray-300 dark:border-[#283039] rounded-lg text-slate-900 dark:text-white hover:bg-gray-200 dark:hover:bg-[#283039] transition-colors">
                <span class="material-symbols-outlined text-[20px]">filter_list</span>
                <span class="text-sm font-medium">Lọc</span>
            </button>
        </div>
    </form>


    <!-- Course Data Table -->
    <div class="border border-gray-200 dark:border-[#283039] rounded-xl overflow-hidden bg-white dark:bg-[#1a222c]">
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="bg-gray-50 dark:bg-[#202934] border-b border-gray-200 dark:border-[#283039]">
                        <th class="p-4 text-xs font-bold tracking-wider text-gray-500 dark:text-[#9dabb9] uppercase">Khóa học</th>
                        <th class="p-4 text-xs font-bold tracking-wider text-gray-500 dark:text-[#9dabb9] uppercase hidden md:table-cell">Danh mục</th>
                        <th class="p-4 text-xs font-bold tracking-wider text-gray-500 dark:text-[#9dabb9] uppercase hidden lg:table-cell">Giảng viên</th>
                        <th class="p-4 text-xs font-bold tracking-wider text-gray-500 dark:text-[#9dabb9] uppercase">Trạng thái</th>
                        <th class="p-4 text-xs font-bold tracking-wider text-gray-500 dark:text-[#9dabb9] uppercase text-right hidden md:table-cell">Học viên</th>
                        <th class="p-4 text-xs font-bold tracking-wider text-gray-500 dark:text-[#9dabb9] uppercase text-right">Thao tác</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 dark:divide-[#283039]">
                    @foreach (var course in Model.Courses)
                    {
                        <tr class="group hover:bg-gray-50 dark:hover:bg-[#202934] transition-colors">
                            <td class="p-4">
                                <div class="flex items-center gap-4">
                                    @if (!string.IsNullOrEmpty(course.ThumbnailUrl))
                                    {
                                        <div class="h-12 w-16 rounded-md bg-cover bg-center shrink-0 border border-gray-200 dark:border-[#283039]" 
                                             style="background-image: url('@course.ThumbnailUrl');"></div>
                                    }
                                    else
                                    {
                                        <div class="h-12 w-16 rounded-md bg-gray-100 dark:bg-[#283039] flex items-center justify-center shrink-0 border border-gray-200 dark:border-[#3b4754]">
                                            <span class="material-symbols-outlined text-gray-400 dark:text-[#9dabb9]">image</span>
                                        </div>
                                    }
                                    <div class="flex flex-col">
                                        <span class="text-sm font-medium text-slate-900 dark:text-white">@course.Title</span>
                                    </div>
                                </div>
                            </td>
                            <td class="p-4 hidden md:table-cell">
                                @if (!string.IsNullOrEmpty(course.CategoryName))
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-500/10 text-blue-600 dark:text-blue-400 border border-blue-500/20">
                                        @course.CategoryName
                                    </span>
                                }
                                else
                                {
                                    <span class="text-gray-500 dark:text-[#9dabb9] text-sm">-</span>
                                }
                            </td>
                            <td class="p-4 hidden lg:table-cell">
                                @if (course.InstructorId > 0 && course.InstructorName != "Not Assigned")
                                {
                                    <div class="flex items-center gap-2">
                                        <div class="size-6 rounded-full bg-gray-200 dark:bg-[#283039] flex items-center justify-center text-xs font-bold text-gray-500 dark:text-[#9dabb9]">
                                            @course.InstructorName.Substring(0, Math.Min(2, course.InstructorName.Length)).ToUpper()
                                        </div>
                                        <span class="text-sm text-slate-900 dark:text-white">@course.InstructorName</span>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-amber-500 dark:text-amber-400 text-sm">Chưa phân công</span>
                                }
                            </td>
                            <td class="p-4">
                                <div class="flex items-center gap-2">
                                    <div class="size-2 rounded-full @course.StatusColor"></div>
                                    <span class="text-sm font-medium @(course.Status == Online_Course.Models.CourseStatus.Public ? "text-emerald-600 dark:text-emerald-400" : course.Status == Online_Course.Models.CourseStatus.Private ? "text-yellow-600 dark:text-yellow-400" : "text-gray-500 dark:text-[#9dabb9]")">@course.StatusText</span>
                                </div>
                            </td>
                            <td class="p-4 text-right text-sm text-gray-500 dark:text-[#9dabb9] hidden md:table-cell">
                                @course.EnrollmentCount
                            </td>
                            <td class="p-4 text-right">
                                <div class="flex items-center justify-end gap-2">
                                    <a asp-action="Details" asp-route-id="@course.CourseId" class="p-1.5 text-gray-500 dark:text-[#9dabb9] hover:text-primary hover:bg-primary/10 rounded transition-colors" title="Xem chi tiết">
                                        <span class="material-symbols-outlined text-[20px]">visibility</span>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@course.CourseId" class="p-1.5 text-gray-500 dark:text-[#9dabb9] hover:text-slate-900 dark:hover:text-white hover:bg-gray-200 dark:hover:bg-[#3b4754] rounded transition-colors" title="Chỉnh sửa">
                                        <span class="material-symbols-outlined text-[20px]">edit</span>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@course.CourseId" method="post" class="inline delete-form">
                                        @Html.AntiForgeryToken()
                                        <button type="button" onclick="showConfirmDialog(this.closest('form'), 'Xóa khóa học', 'Bạn có chắc chắn muốn xóa khóa học này? Tất cả bài học và tiến độ học viên sẽ bị xóa.', 'Xóa', 'danger')" class="p-1.5 text-gray-500 dark:text-[#9dabb9] hover:text-red-500 dark:hover:text-red-400 hover:bg-red-500/10 rounded transition-colors" title="Xóa">
                                            <span class="material-symbols-outlined text-[20px]">delete</span>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!Model.Courses.Any())
        {
            <div class="p-8 text-center text-gray-500 dark:text-[#9dabb9]">
                <span class="material-symbols-outlined text-4xl mb-2">local_library</span>
                <p>Không tìm thấy khóa học</p>
            </div>
        }
    </div>

    @* Pagination Controls *@
    @if (Model.TotalPages > 1)
    {
        <div class="flex flex-col md:flex-row items-center justify-between gap-4 p-4 bg-white dark:bg-[#1a222c] border border-gray-200 dark:border-[#283039] rounded-xl">
            <div class="text-sm text-gray-500 dark:text-[#9dabb9]">
                Trang <span class="font-semibold text-slate-900 dark:text-white">@Model.CurrentPage</span> 
                / <span class="font-semibold">@Model.TotalPages</span>
            </div>

            <div class="flex items-center gap-2">
                @if (Model.HasPreviousPage)
                {
                    <a asp-action="Index" 
                       asp-route-page="@(Model.CurrentPage - 1)"
                       asp-route-search="@Model.SearchQuery"
                       asp-route-category="@Model.CategoryFilter"
                       asp-route-status="@Model.StatusFilter"
                       class="flex items-center gap-1 px-3 py-2 text-sm font-medium text-slate-900 dark:text-white bg-white dark:bg-[#283039] border border-gray-300 dark:border-[#3b4754] rounded-lg hover:bg-gray-50 dark:hover:bg-[#3b4754] transition-colors">
                        <span class="material-symbols-outlined text-[18px]">chevron_left</span>
                        <span class="hidden sm:inline">Trước</span>
                    </a>
                }
                else
                {
                    <button disabled class="flex items-center gap-1 px-3 py-2 text-sm font-medium text-gray-400 dark:text-[#586472] bg-gray-100 dark:bg-[#202934] border border-gray-200 dark:border-[#283039] rounded-lg cursor-not-allowed">
                        <span class="material-symbols-outlined text-[18px]">chevron_left</span>
                        <span class="hidden sm:inline">Trước</span>
                    </button>
                }

                @{
                    var startPage = Math.Max(1, Model.CurrentPage - 2);
                    var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                }

                @if (startPage > 1)
                {
                    <a asp-action="Index" asp-route-page="1" asp-route-search="@Model.SearchQuery" asp-route-category="@Model.CategoryFilter" asp-route-status="@Model.StatusFilter"
                       class="px-3 py-2 text-sm font-medium text-slate-900 dark:text-white bg-white dark:bg-[#283039] border border-gray-300 dark:border-[#3b4754] rounded-lg hover:bg-gray-50 dark:hover:bg-[#3b4754] transition-colors">1</a>
                    @if (startPage > 2) { <span class="px-2 text-gray-500 dark:text-[#9dabb9]">...</span> }
                }

                @for (var i = startPage; i <= endPage; i++)
                {
                    var pageNumber = i;
                    if (pageNumber == Model.CurrentPage)
                    {
                        <button class="px-3 py-2 text-sm font-bold text-white bg-primary border border-primary rounded-lg cursor-default">@pageNumber</button>
                    }
                    else
                    {
                        <a asp-action="Index" asp-route-page="@pageNumber" asp-route-search="@Model.SearchQuery" asp-route-category="@Model.CategoryFilter" asp-route-status="@Model.StatusFilter"
                           class="px-3 py-2 text-sm font-medium text-slate-900 dark:text-white bg-white dark:bg-[#283039] border border-gray-300 dark:border-[#3b4754] rounded-lg hover:bg-gray-50 dark:hover:bg-[#3b4754] transition-colors">@pageNumber</a>
                    }
                }

                @if (endPage < Model.TotalPages)
                {
                    @if (endPage < Model.TotalPages - 1) { <span class="px-2 text-gray-500 dark:text-[#9dabb9]">...</span> }
                    <a asp-action="Index" asp-route-page="@Model.TotalPages" asp-route-search="@Model.SearchQuery" asp-route-category="@Model.CategoryFilter" asp-route-status="@Model.StatusFilter"
                       class="px-3 py-2 text-sm font-medium text-slate-900 dark:text-white bg-white dark:bg-[#283039] border border-gray-300 dark:border-[#3b4754] rounded-lg hover:bg-gray-50 dark:hover:bg-[#3b4754] transition-colors">@Model.TotalPages</a>
                }

                @if (Model.HasNextPage)
                {
                    <a asp-action="Index" 
                       asp-route-page="@(Model.CurrentPage + 1)"
                       asp-route-search="@Model.SearchQuery"
                       asp-route-category="@Model.CategoryFilter"
                       asp-route-status="@Model.StatusFilter"
                       class="flex items-center gap-1 px-3 py-2 text-sm font-medium text-slate-900 dark:text-white bg-white dark:bg-[#283039] border border-gray-300 dark:border-[#3b4754] rounded-lg hover:bg-gray-50 dark:hover:bg-[#3b4754] transition-colors">
                        <span class="hidden sm:inline">Sau</span>
                        <span class="material-symbols-outlined text-[18px]">chevron_right</span>
                    </a>
                }
                else
                {
                    <button disabled class="flex items-center gap-1 px-3 py-2 text-sm font-medium text-gray-400 dark:text-[#586472] bg-gray-100 dark:bg-[#202934] border border-gray-200 dark:border-[#283039] rounded-lg cursor-not-allowed">
                        <span class="hidden sm:inline">Sau</span>
                        <span class="material-symbols-outlined text-[18px]">chevron_right</span>
                    </button>
                }
            </div>
        </div>
    }
</div>

