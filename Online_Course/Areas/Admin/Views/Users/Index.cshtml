@model Online_Course.ViewModels.UserIndexViewModel
@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-[1400px] mx-auto flex flex-col gap-8">
    <!-- Page Header -->
    <div class="flex flex-col md:flex-row md:items-end justify-between gap-4">
        <div class="flex flex-col gap-2">
            <h1 class="text-slate-900 dark:text-white text-3xl md:text-4xl font-black leading-tight tracking-[-0.033em]">Quản lý người dùng</h1>
            <p class="text-gray-500 dark:text-[#9dabb9] text-base font-normal">Xem, tìm kiếm và quản lý tất cả người dùng trong hệ thống</p>
        </div>
        <a asp-action="Create" class="flex items-center justify-center gap-2 rounded-lg h-12 px-6 bg-primary hover:bg-blue-600 text-white text-sm font-bold shadow-lg shadow-blue-500/20 transition-all">
            <span class="material-symbols-outlined text-[20px]">add</span>
            <span>Thêm người dùng</span>
        </a>
    </div>

    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 dark:bg-green-500/20 border border-green-300 dark:border-green-500/30 text-green-700 dark:text-green-400 px-4 py-3 rounded-lg flex items-center gap-2">
            <span class="material-symbols-outlined">check_circle</span>
            <span>@TempData["SuccessMessage"]</span>
        </div>
    }

    <!-- Search and Filter -->
    <form method="get" class="flex flex-col md:flex-row gap-4 p-4 bg-white dark:bg-[#1a222c] border border-gray-200 dark:border-[#283039] rounded-xl">
        <div class="flex-1 relative">
            <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 dark:text-[#9dabb9]">
                <span class="material-symbols-outlined">search</span>
            </span>
            <input type="text" name="search" value="@Model.SearchQuery" 
                   class="w-full h-12 pl-10 pr-4 bg-gray-50 dark:bg-[#111418] border border-gray-300 dark:border-[#283039] rounded-lg text-slate-900 dark:text-white placeholder-gray-400 dark:placeholder-[#586472] focus:ring-2 focus:ring-primary focus:border-primary" 
                   placeholder="Tìm kiếm theo tên hoặc email..." />
        </div>
        <select name="role" class="h-12 px-4 bg-gray-50 dark:bg-[#111418] border border-gray-300 dark:border-[#283039] rounded-lg text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-primary cursor-pointer">
            <option value="">Tất cả vai trò</option>
            <option value="Admin" selected="@(Model.SelectedRole == "Admin")">Admin</option>
            <option value="Instructor" selected="@(Model.SelectedRole == "Instructor")">Giảng viên</option>
            <option value="Student" selected="@(Model.SelectedRole == "Student")">Học viên</option>
        </select>
        <button type="submit" class="h-12 px-6 bg-primary hover:bg-blue-600 text-white font-medium rounded-lg transition-colors flex items-center gap-2">
            <span class="material-symbols-outlined">search</span>
            Tìm kiếm
        </button>
        @if (!string.IsNullOrEmpty(Model.SearchQuery) || !string.IsNullOrEmpty(Model.SelectedRole))
        {
            <a asp-action="Index" class="h-12 px-4 bg-gray-200 dark:bg-[#283039] hover:bg-gray-300 dark:hover:bg-[#3b4754] text-slate-900 dark:text-white font-medium rounded-lg transition-colors flex items-center gap-2">
                <span class="material-symbols-outlined">clear</span>
                Xóa bộ lọc
            </a>
        }
    </form>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="flex flex-col gap-2 rounded-xl p-6 bg-white dark:bg-[#1a222c] border border-gray-200 dark:border-[#283039] shadow-sm">
            <div class="flex justify-between items-start">
                <p class="text-gray-500 dark:text-[#9dabb9] text-sm font-medium">Tổng người dùng</p>
                <span class="material-symbols-outlined text-primary bg-primary/10 p-1.5 rounded-lg text-[20px]">group</span>
            </div>
            <div class="flex items-baseline gap-2">
                <p class="text-slate-900 dark:text-white text-3xl font-bold">@Model.TotalUsers</p>
            </div>
        </div>
        <div class="flex flex-col gap-2 rounded-xl p-6 bg-white dark:bg-[#1a222c] border border-gray-200 dark:border-[#283039] shadow-sm">
            <div class="flex justify-between items-start">
                <p class="text-gray-500 dark:text-[#9dabb9] text-sm font-medium">Giảng viên</p>
                <span class="material-symbols-outlined text-purple-500 dark:text-purple-400 bg-purple-500/10 p-1.5 rounded-lg text-[20px]">school</span>
            </div>
            <div class="flex items-baseline gap-2">
                <p class="text-slate-900 dark:text-white text-3xl font-bold">@Model.InstructorCount</p>
            </div>
        </div>
        <div class="flex flex-col gap-2 rounded-xl p-6 bg-white dark:bg-[#1a222c] border border-gray-200 dark:border-[#283039] shadow-sm">
            <div class="flex justify-between items-start">
                <p class="text-gray-500 dark:text-[#9dabb9] text-sm font-medium">Học viên</p>
                <span class="material-symbols-outlined text-green-500 dark:text-green-400 bg-green-500/10 p-1.5 rounded-lg text-[20px]">person</span>
            </div>
            <div class="flex items-baseline gap-2">
                <p class="text-slate-900 dark:text-white text-3xl font-bold">@Model.StudentCount</p>
            </div>
        </div>
    </div>


    <!-- User Data Table -->
    <div class="border border-gray-200 dark:border-[#283039] rounded-xl overflow-hidden bg-white dark:bg-[#1a222c]">
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="bg-gray-50 dark:bg-[#202934] border-b border-gray-200 dark:border-[#283039]">
                        <th class="p-4 text-xs font-bold tracking-wider text-gray-500 dark:text-[#9dabb9] uppercase">Người dùng</th>
                        <th class="p-4 text-xs font-bold tracking-wider text-gray-500 dark:text-[#9dabb9] uppercase hidden md:table-cell">Email</th>
                        <th class="p-4 text-xs font-bold tracking-wider text-gray-500 dark:text-[#9dabb9] uppercase">Vai trò</th>
                        <th class="p-4 text-xs font-bold tracking-wider text-gray-500 dark:text-[#9dabb9] uppercase">Trạng thái</th>
                        <th class="p-4 text-xs font-bold tracking-wider text-gray-500 dark:text-[#9dabb9] uppercase hidden lg:table-cell">Ngày tạo</th>
                        <th class="p-4 text-xs font-bold tracking-wider text-gray-500 dark:text-[#9dabb9] uppercase text-right">Thao tác</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 dark:divide-[#283039]">
                    @foreach (var user in Model.Users)
                    {
                        <tr class="group hover:bg-gray-50 dark:hover:bg-[#202934] transition-colors">
                            <td class="p-4">
                                <div class="flex items-center gap-3">
                                    <div class="size-10 rounded-full bg-gray-200 dark:bg-[#283039] flex items-center justify-center border border-gray-300 dark:border-[#3b4754] text-slate-900 dark:text-white font-bold">
                                        @user.FullName.Substring(0, Math.Min(2, user.FullName.Length)).ToUpper()
                                    </div>
                                    <div>
                                        <p class="text-slate-900 dark:text-white font-medium text-sm">@user.FullName</p>
                                        <p class="text-gray-500 dark:text-[#9dabb9] text-xs md:hidden">@user.Email</p>
                                    </div>
                                </div>
                            </td>
                            <td class="p-4 text-sm text-gray-500 dark:text-[#9dabb9] hidden md:table-cell">@user.Email</td>
                            <td class="p-4">
                                @{
                                    var roleClass = user.RoleName switch
                                    {
                                        "Admin" => "bg-primary/20 text-primary border-primary/20",
                                        "Instructor" => "bg-purple-500/20 text-purple-600 dark:text-purple-400 border-purple-500/20",
                                        _ => "bg-green-500/20 text-green-600 dark:text-green-400 border-green-500/20"
                                    };
                                }
                                <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-bold @roleClass border">
                                    @user.RoleName
                                </span>
                            </td>
                            <td class="p-4">
                                @if (user.IsActive)
                                {
                                    <div class="flex items-center gap-2">
                                        <span class="h-2.5 w-2.5 rounded-full bg-green-500"></span>
                                        <span class="text-slate-900 dark:text-white text-sm">Hoạt động</span>
                                    </div>
                                }
                                else
                                {
                                    <div class="flex items-center gap-2">
                                        <span class="h-2.5 w-2.5 rounded-full bg-red-500"></span>
                                        <span class="text-gray-500 dark:text-[#9dabb9] text-sm">Vô hiệu</span>
                                    </div>
                                }
                            </td>
                            <td class="p-4 text-sm text-gray-500 dark:text-[#9dabb9] hidden lg:table-cell">@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                            <td class="p-4 text-right">
                                <div class="flex items-center justify-end gap-2">
                                    <a asp-action="Details" asp-route-id="@user.UserId" class="p-1.5 text-gray-500 dark:text-[#9dabb9] hover:text-primary hover:bg-primary/10 rounded transition-colors" title="Chi tiết">
                                        <span class="material-symbols-outlined text-[20px]">visibility</span>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@user.UserId" class="p-1.5 text-gray-500 dark:text-[#9dabb9] hover:text-slate-900 dark:hover:text-white hover:bg-gray-200 dark:hover:bg-[#3b4754] rounded transition-colors" title="Chỉnh sửa">
                                        <span class="material-symbols-outlined text-[20px]">edit</span>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@user.UserId" method="post" class="inline delete-form">
                                        @Html.AntiForgeryToken()
                                        <button type="button" onclick="showConfirmDialog(this.closest('form'), 'Xóa người dùng', 'Bạn có chắc chắn muốn xóa người dùng này? Hành động này không thể hoàn tác.', 'Xóa', 'danger')" class="p-1.5 text-gray-500 dark:text-[#9dabb9] hover:text-red-500 dark:hover:text-red-400 hover:bg-red-500/10 rounded transition-colors" title="Xóa">
                                            <span class="material-symbols-outlined text-[20px]">delete</span>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!Model.Users.Any())
        {
            <div class="p-8 text-center text-gray-500 dark:text-[#9dabb9]">
                <span class="material-symbols-outlined text-4xl mb-2">person_off</span>
                <p>Không tìm thấy người dùng</p>
            </div>
        }
    </div>
</div>
