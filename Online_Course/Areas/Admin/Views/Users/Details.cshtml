@model Online_Course.ViewModels.UserDetailsViewModel
@{
    ViewData["Title"] = "Chi tiết người dùng";
}

<div class="flex flex-col gap-6">
    <!-- Breadcrumb -->
    <div class="flex items-center gap-2 text-sm">
        <a asp-action="Index" class="text-gray-500 dark:text-slate-400 hover:text-slate-900 dark:hover:text-white transition-colors">Người dùng</a>
        <span class="text-gray-400 dark:text-slate-600">/</span>
        <span class="text-slate-900 dark:text-white">@Model.FullName</span>
    </div>

    <!-- User Info Card -->
    <div class="bg-white dark:bg-surface-dark rounded-xl border border-gray-200 dark:border-slate-700 p-6">
        <div class="flex flex-col md:flex-row md:items-start gap-6">
            <div class="w-20 h-20 rounded-full bg-primary/20 flex items-center justify-center flex-shrink-0">
                <span class="material-symbols-outlined text-primary text-4xl">person</span>
            </div>
            <div class="flex-1">
                <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                    <div>
                        <h1 class="text-2xl font-bold text-slate-900 dark:text-white">@Model.FullName</h1>
                        <p class="text-gray-500 dark:text-slate-400">@Model.Email</p>
                    </div>
                    <div class="flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.UserId" 
                           class="px-4 py-2 bg-primary hover:bg-blue-600 text-white text-sm font-medium rounded-lg transition-colors flex items-center gap-2">
                            <span class="material-symbols-outlined text-sm">edit</span>
                            Chỉnh sửa
                        </a>
                        <a asp-action="Index" 
                           class="px-4 py-2 bg-gray-100 dark:bg-slate-700 hover:bg-gray-200 dark:hover:bg-slate-600 text-slate-900 dark:text-white text-sm font-medium rounded-lg transition-colors">
                            Quay lại
                        </a>
                    </div>
                </div>
                <div class="flex flex-wrap gap-4 mt-4">
                    <span class="px-3 py-1 rounded-full text-sm font-medium @(Model.RoleName == "Admin" ? "bg-red-500/20 text-red-600 dark:text-red-400" : Model.RoleName == "Instructor" ? "bg-purple-500/20 text-purple-600 dark:text-purple-400" : "bg-green-500/20 text-green-600 dark:text-green-400")">
                        @Model.RoleName
                    </span>
                    <span class="px-3 py-1 rounded-full text-sm font-medium @(Model.IsActive ? "bg-green-500/20 text-green-600 dark:text-green-400" : "bg-gray-200 dark:bg-slate-600 text-gray-600 dark:text-slate-400")">
                        @(Model.IsActive ? "Đang hoạt động" : "Đã vô hiệu")
                    </span>
                    <span class="text-gray-500 dark:text-slate-400 text-sm flex items-center gap-1">
                        <span class="material-symbols-outlined text-sm">calendar_today</span>
                        Tham gia: @Model.CreatedAt.ToString("dd/MM/yyyy")
                    </span>
                </div>
            </div>
        </div>
    </div>

    @if (Model.RoleName == "Instructor")
    {
        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="bg-white dark:bg-surface-dark rounded-xl border border-gray-200 dark:border-slate-700 p-5">
                <div class="flex items-center gap-4">
                    <div class="p-3 bg-primary/20 rounded-lg">
                        <span class="material-symbols-outlined text-primary">school</span>
                    </div>
                    <div>
                        <p class="text-gray-500 dark:text-slate-400 text-sm">Khóa học</p>
                        <p class="text-slate-900 dark:text-white text-2xl font-bold">@Model.Courses.Count</p>
                    </div>
                </div>
            </div>
            <div class="bg-white dark:bg-surface-dark rounded-xl border border-gray-200 dark:border-slate-700 p-5">
                <div class="flex items-center gap-4">
                    <div class="p-3 bg-green-500/20 rounded-lg">
                        <span class="material-symbols-outlined text-green-500">group</span>
                    </div>
                    <div>
                        <p class="text-gray-500 dark:text-slate-400 text-sm">Học viên</p>
                        <p class="text-slate-900 dark:text-white text-2xl font-bold">@Model.TotalStudents</p>
                    </div>
                </div>
            </div>
            <div class="bg-white dark:bg-surface-dark rounded-xl border border-gray-200 dark:border-slate-700 p-5">
                <div class="flex items-center gap-4">
                    <div class="p-3 bg-orange-500/20 rounded-lg">
                        <span class="material-symbols-outlined text-orange-500">menu_book</span>
                    </div>
                    <div>
                        <p class="text-gray-500 dark:text-slate-400 text-sm">Bài học</p>
                        <p class="text-slate-900 dark:text-white text-2xl font-bold">@Model.TotalLessons</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Courses Table -->
        <div class="bg-white dark:bg-surface-dark rounded-xl border border-gray-200 dark:border-slate-700 overflow-hidden">
            <div class="p-6 border-b border-gray-200 dark:border-slate-700">
                <h2 class="text-slate-900 dark:text-white text-lg font-bold">Danh sách khóa học</h2>
            </div>
            @if (Model.Courses.Any())
            {
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-gray-50 dark:bg-slate-800/50">
                            <tr>
                                <th class="text-left text-gray-500 dark:text-slate-400 text-xs font-medium uppercase tracking-wider px-6 py-4">Khóa học</th>
                                <th class="text-center text-gray-500 dark:text-slate-400 text-xs font-medium uppercase tracking-wider px-4 py-4">Danh mục</th>
                                <th class="text-center text-gray-500 dark:text-slate-400 text-xs font-medium uppercase tracking-wider px-4 py-4">Học viên</th>
                                <th class="text-center text-gray-500 dark:text-slate-400 text-xs font-medium uppercase tracking-wider px-4 py-4">Bài học</th>
                                <th class="text-center text-gray-500 dark:text-slate-400 text-xs font-medium uppercase tracking-wider px-4 py-4">Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200 dark:divide-slate-700">
                            @foreach (var course in Model.Courses)
                            {
                                <tr class="hover:bg-gray-50 dark:hover:bg-slate-800/30 transition-colors">
                                    <td class="px-6 py-4">
                                        <span class="text-slate-900 dark:text-white font-medium">@course.Title</span>
                                    </td>
                                    <td class="text-center px-4 py-4">
                                        <span class="text-gray-600 dark:text-slate-300">@course.CategoryName</span>
                                    </td>
                                    <td class="text-center px-4 py-4">
                                        <span class="text-slate-900 dark:text-white">@course.EnrollmentCount</span>
                                    </td>
                                    <td class="text-center px-4 py-4">
                                        <span class="text-slate-900 dark:text-white">@course.LessonCount</span>
                                    </td>
                                    <td class="text-center px-4 py-4">
                                        <span class="px-2 py-1 @(course.Status == Online_Course.Models.CourseStatus.Public ? "bg-green-500/20 text-green-600 dark:text-green-400" : course.Status == Online_Course.Models.CourseStatus.Private ? "bg-yellow-500/20 text-yellow-600 dark:text-yellow-400" : "bg-gray-200 dark:bg-slate-500/20 text-gray-600 dark:text-slate-400") text-xs font-medium rounded-full">@course.StatusText</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="p-12 text-center">
                    <span class="material-symbols-outlined text-5xl text-gray-400 dark:text-slate-600 mb-4">school</span>
                    <p class="text-gray-500 dark:text-slate-400">Giảng viên chưa có khóa học nào</p>
                </div>
            }
        </div>
    }
</div>
